              <a class="actionLinkLite" href="/review/list/3460352-sharon?shelf=historical-romance">historical-romance</a>, 
              <a class="actionLinkLite" href="/review/list/3460352-sharon?shelf=favorite">favorite</a>, 
              <a class="actionLinkLite" href="/review/list/3460352-sharon?shelf=england">england</a>, 
              <a class="actionLinkLite" href="/review/list/3460352-sharon?shelf=good-sex">good-sex</a>, 
              <a class="actionLinkLite" href="/review/list/3460352-sharon?shelf=violence">violence</a>, 
              <a class="actionLinkLite" href="/review/list/3460352-sharon?shelf=reviewed">reviewed</a>, 
              <a class="actionLinkLite" href="/review/list/3460352-sharon?shelf=alpha-male">alpha-male</a>, 
              <a class="actionLinkLite" href="/review/list/3460352-sharon?shelf=owned-books">owned-books</a>, 
              <a class="actionLinkLite" href="/review/list/3460352-sharon?shelf=spitfire">spitfire</a>, 
