        $('bookCover_2095').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_2095').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
