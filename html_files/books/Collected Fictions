        $('bookCover_94486').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_94486').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
