        $('bookCover_847871').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_847871').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
