        $('bookCover_94804').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_94804').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
