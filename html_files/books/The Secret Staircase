      });

      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_421572').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_421572').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_421572').observe('prototip:hidden', function () {
