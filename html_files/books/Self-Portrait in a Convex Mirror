        $('bookCover_364141').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_364141').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
