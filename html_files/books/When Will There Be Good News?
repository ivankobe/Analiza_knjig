<div id="review_380135116" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/380135116" />
    <a title="Michael" class="left imgcol" href="/user/show/4086118-michael"><img alt="Michael" src="https://images.gr-assets.com/users/1567611029p2/4086118.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/380135116?book_show_action=true">Jul 30, 2012</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Michael" class="user" itemprop="url" name="Michael" href="/user/show/4086118-michael">Michael</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/4086118-michael?shelf=coming-of-age">coming-of-age</a>, 
              <a class="actionLinkLite" href="/review/list/4086118-michael?shelf=mystery">mystery</a>, 
              <a class="actionLinkLite" href="/review/list/4086118-michael?shelf=favorites">favorites</a>, 
              <a class="actionLinkLite" href="/review/list/4086118-michael?shelf=fiction">fiction</a>, 
              <a class="actionLinkLite" href="/review/list/4086118-michael?shelf=england">england</a>, 
              <a class="actionLinkLite" href="/review/list/4086118-michael?shelf=scotland">scotland</a>
          </div>
