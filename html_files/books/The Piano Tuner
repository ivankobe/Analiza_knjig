<div id="review_1849900230" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1849900230" />
    <a title="Calzean" class="left imgcol" href="/user/show/26416859-calzean"><img alt="Calzean" src="https://images.gr-assets.com/users/1469230411p2/26416859.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1849900230?book_show_action=true">Jan 06, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Calzean" class="user" itemprop="url" name="Calzean" href="/user/show/26416859-calzean">Calzean</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="liked it"><span size="15x15" class="staticStar p10">liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>

          <span class="greyText">&nbsp;&middot;&nbsp;</span>
          <a class="lightGreyText" title="Paperback 9780330492690" href="/book/show/55097.The_Piano_Tuner">review of another edition</a>


        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/26416859-calzean?shelf=historical-fiction">historical-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/26416859-calzean?shelf=culture-england">culture-england</a>, 
              <a class="actionLinkLite" href="/review/list/26416859-calzean?shelf=author-usa">author-usa</a>, 
              <a class="actionLinkLite" href="/review/list/26416859-calzean?shelf=culture-myanmar">culture-myanmar</a>
          </div>
