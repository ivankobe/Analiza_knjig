        $('bookCover_16034852').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_16034852').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_16034852').observe('prototip:hidden', function () {
