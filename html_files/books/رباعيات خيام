      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_814318').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_814318').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_814318').observe('prototip:hidden', function () {
