<div id="review_60837908" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/60837908" />
    <a title="Nisha" class="left imgcol" href="/user/show/2451459-nisha"><img alt="Nisha" src="https://images.gr-assets.com/users/1609799411p2/2451459.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/60837908?book_show_action=true">Jun 23, 2009</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Nisha" class="user" itemprop="url" name="Nisha" href="/user/show/2451459-nisha">Nisha</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="really liked it"><span size="15x15" class="staticStar p10">really liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/2451459-nisha?shelf=western">western</a>, 
              <a class="actionLinkLite" href="/review/list/2451459-nisha?shelf=opposites-attract">opposites-attract</a>, 
              <a class="actionLinkLite" href="/review/list/2451459-nisha?shelf=bodyguard">bodyguard</a>, 
              <a class="actionLinkLite" href="/review/list/2451459-nisha?shelf=interracial">interracial</a>, 
              <a class="actionLinkLite" href="/review/list/2451459-nisha?shelf=dangerous-or-bad-boys">dangerous-or-bad-boys</a>, 
