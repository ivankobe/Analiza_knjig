        $('bookCover_709835').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_709835').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
