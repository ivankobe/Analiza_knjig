        $('bookCover_372494').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_372494').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
