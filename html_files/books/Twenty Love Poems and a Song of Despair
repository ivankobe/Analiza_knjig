<div id="review_4255076" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/4255076" />
    <a title="vie" class="left imgcol" href="/user/show/262814-vie"><img alt="vie" src="https://images.gr-assets.com/users/1216862337p2/262814.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/4255076?book_show_action=true">Aug 08, 2007</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="vie" class="user" itemprop="url" name="vie" href="/user/show/262814-vie">vie</a>
