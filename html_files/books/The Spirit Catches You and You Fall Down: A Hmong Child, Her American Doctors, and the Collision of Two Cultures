<div id="review_2581873329" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2581873329" />
    <a title="Phyllis" class="left imgcol" href="/user/show/19228026-phyllis"><img alt="Phyllis" src="https://images.gr-assets.com/users/1547871251p2/19228026.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2581873329?book_show_action=true">Feb 17, 2019</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Phyllis" class="user" itemprop="url" name="Phyllis" href="/user/show/19228026-phyllis">Phyllis</a>
