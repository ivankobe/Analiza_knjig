<div id="review_3197091284" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/3197091284" />
    <a title="AC" class="left imgcol" href="/user/show/1655437-ac"><img alt="AC" src="https://images.gr-assets.com/users/1228702469p2/1655437.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/3197091284?book_show_action=true">Feb 22, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="AC" class="user" itemprop="url" name="AC" href="/user/show/1655437-ac">AC</a>
