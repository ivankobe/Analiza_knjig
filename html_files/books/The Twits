        $('bookCover_44169278').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_44169278').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
