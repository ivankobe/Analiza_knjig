      <a class="uitext" rel="nofollow" id="span_class_gr-hyperlink_more_filters_span_tip_425" style="cursor: pointer; " href="#" onclick="return false"><span class="gr-hyperlink">More filters</span></a><script>
//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_425'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/8909.The_War_of_the_Worlds?rating=\">all <span class=\"greyText\">(504708)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/8909.The_War_of_the_Worlds?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;56wwN1/dQ/wcLc5qWE3MZCCl9uTK06PfA/XXLUlo6lBUZeoRWj7seu4La6cUKIB76UjOnnh/earY6bw/oMZnxw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(70529)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/8909.The_War_of_the_Worlds?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;hfYd8aF/IQMZWgmZg8+tv1cOFoZdsPL1MCjlKoqYlMY2P8fXpJyOhet8rFTPquGgnuMu/O8cKIDrNI44YzYZUQ==&#39;)}); return false;\">4 stars <span class=\"greyText\">(100950)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n  