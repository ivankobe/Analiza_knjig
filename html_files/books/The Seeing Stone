        $('bookCover_44003').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_44003').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
