        $('bookCover_21483257').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_21483257').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
