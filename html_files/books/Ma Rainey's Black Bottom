<div id="review_1841497360" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1841497360" />
    <a title="Raymond" class="left imgcol" href="/user/show/6401735-raymond"><img alt="Raymond" src="https://images.gr-assets.com/users/1496199206p2/6401735.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1841497360?book_show_action=true">Apr 02, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Raymond" class="user" itemprop="url" name="Raymond" href="/user/show/6401735-raymond">Raymond</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="liked it"><span size="15x15" class="staticStar p10">liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>



        

