        $('bookCover_378209').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_378209').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_378209').observe('prototip:hidden', function () {
