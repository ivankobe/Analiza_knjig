        $('bookCover_45195').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_45195').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
