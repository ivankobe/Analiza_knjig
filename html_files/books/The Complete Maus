<div id="review_542860688" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/542860688" />
    <a title="Arnie" class="left imgcol" href="/user/show/5602861-arnie"><img alt="Arnie" src="https://images.gr-assets.com/users/1366591042p2/5602861.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/542860688?book_show_action=true">Feb 21, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Arnie" class="user" itemprop="url" name="Arnie" href="/user/show/5602861-arnie">Arnie</a>
