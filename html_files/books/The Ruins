//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_387'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/1150339.The_Ruins?rating=\">all <span class=\"greyText\">(71811)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/1150339.The_Ruins?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;8Molnt4AIhWIpuzwbn8vuO3GTSleE5PulPhcYAPSzts6jadgUoH4BLZp5ffkXQyt2TPxwRB9h82HiJ2FFVgNwg==&#39;)}); return false;\">5 stars <span class=\"greyText\">(8189)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/1150339.The_Ruins?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;VHK8/+/OMInBbCrgkcwiKWlv0gpRQiHVOaTpxyi/YKueNT4BY0/qmP+jI+cb7gE8XZpu4h8sNfYq1CgiPjWjsg==&#39;)}); return false;\">4 stars <span class=\"greyText\">(12012)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"