<div id="review_1605457123" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1605457123" />
    <a title="LibraryCin" class="left imgcol" href="/user/show/12860715-librarycin"><img alt="LibraryCin" src="https://images.gr-assets.com/users/1610600349p2/12860715.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1605457123?book_show_action=true">Mar 16, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="LibraryCin" class="user" itemprop="url" name="LibraryCin" href="/user/show/12860715-librarycin">LibraryCin</a>
