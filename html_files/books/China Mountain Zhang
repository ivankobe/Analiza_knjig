        $('bookCover_53146362').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_53146362').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
