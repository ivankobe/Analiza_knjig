<div id="review_987522466" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/987522466" />
    <a title="Penny" class="left imgcol" href="/user/show/10165256-penny"><img alt="Penny" src="https://images.gr-assets.com/users/1340093730p2/10165256.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/987522466?book_show_action=true">Jul 06, 2014</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Penny" class="user" itemprop="url" name="Penny" href="/user/show/10165256-penny">Penny</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="really liked it"><span size="15x15" class="staticStar p10">really liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/10165256-penny?shelf=scifi-fantasy-club-2014challenge">scifi-fantasy-club-2014challenge</a>, 
              <a class="actionLinkLite" href="/review/list/10165256-penny?shelf=scifi-and-fantasy-club-bookshelf">scifi-and-fantasy-club-bookshelf</a>, 
              <a class="actionLinkLite" href="/review/list/10165256-penny?shelf=bookclub">bookclub</a>, 
              <a class="actionLinkLite" href="/review/list/10165256-penny?shelf=science-fiction">science-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/10165256-penny?shelf=award-winner">award-winner</a>, 
              <a class="actionLinkLite" href="/review/list/10165256-penny?shelf=dystopia">dystopia</a>, 
              <a class="actionLinkLite" href="/review/list/10165256-penny?shelf=locus-award">locus-award</a>, 
