<div id="review_94292269" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/94292269" />
    <a title="Chrissie" class="left imgcol" href="/user/show/632247-chrissie"><img alt="Chrissie" src="https://images.gr-assets.com/users/1321799585p2/632247.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/94292269?book_show_action=true">Mar 15, 2010</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Chrissie" class="user" itemprop="url" name="Chrissie" href="/user/show/632247-chrissie">Chrissie</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="liked it"><span size="15x15" class="staticStar p10">liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/632247-chrissie?shelf=kirkus">kirkus</a>, 
              <a class="actionLinkLite" href="/review/list/632247-chrissie?shelf=usa">usa</a>, 
              <a class="actionLinkLite" href="/review/list/632247-chrissie?shelf=history">history</a>, 
              <a class="actionLinkLite" href="/review/list/632247-chrissie?shelf=flora">flora</a>, 
