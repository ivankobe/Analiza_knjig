<div id="review_16197168" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/16197168" />
    <a title="Travis Kirk" class="left imgcol" href="/user/show/928403-travis-kirk"><img alt="Travis Kirk" src="https://images.gr-assets.com/users/1203701513p2/928403.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/16197168?book_show_action=true">Feb 23, 2008</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Travis Kirk" class="user" itemprop="url" name="Travis Kirk" href="/user/show/928403-travis-kirk">Travis Kirk</a>
      </span>

