      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_827'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/93269.Earth_Abides?rating=\">all <span class=\"greyText\">(60043)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/93269.Earth_Abides?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;GUNkEfrycnpZWBAkLWm1txkrVFkDv+jihEOOIPzrOWpxwqrOak/rJRXllLf/NeXuNOdD9eYtDf1mU7UeXQvNkA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(9727)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/93269.Earth_Abides?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;P1/W7oQNC6IIayuswGyLUTw/t+YJu1iJPYnlr/lWhy5X3hgxFLCS/UTWrz8SMNsIEfOgSuwpvZbfmd6RWLZz1A==&#39;)}); return false;\">4 stars <span class=\"greyText\">(9556)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=