        $('bookCover_31450617').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_31450617').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
