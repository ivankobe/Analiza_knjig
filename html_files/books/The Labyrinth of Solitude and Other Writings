      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_961341').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_961341').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_961341').observe('prototip:hidden', function () {
