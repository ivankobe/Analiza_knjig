  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/504212646?book_show_action=true">Jan 12, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Julie" class="user" itemprop="url" name="Julie" href="/user/show/5211606-julie">Julie</a>
