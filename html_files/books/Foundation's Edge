        $('bookCover_70539').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_70539').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
