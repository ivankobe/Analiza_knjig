      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_23307166').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_23307166').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_23307166').observe('prototip:hidden', function () {
