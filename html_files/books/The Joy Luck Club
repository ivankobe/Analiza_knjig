<div id="review_1116812" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1116812" />
    <a title="Celeste Ng" class="left imgcol" href="/user/show/80835-celeste-ng"><img alt="Celeste Ng" src="https://images.gr-assets.com/users/1442458318p2/80835.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1116812?book_show_action=true">May 09, 2007</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Celeste Ng" class="user" itemprop="url" name="Celeste Ng" href="/user/show/80835-celeste-ng">Celeste Ng</a>
