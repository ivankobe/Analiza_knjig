<div id="review_14850927" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/14850927" />
    <a title="Brigid ✩" class="left imgcol" href="/user/show/886144-brigid"><img alt="Brigid ✩" src="https://images.gr-assets.com/users/1581869052p2/886144.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/14850927?book_show_action=true">Feb 07, 2008</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Brigid ✩" class="user" itemprop="url" name="Brigid ✩" href="/user/show/886144-brigid">Brigid ✩</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/886144-brigid?shelf=mythology">mythology</a>, 
              <a class="actionLinkLite" href="/review/list/886144-brigid?shelf=young-adult">young-adult</a>, 
              <a class="actionLinkLite" href="/review/list/886144-brigid?shelf=childrens">childrens</a>, 
              <a class="actionLinkLite" href="/review/list/886144-brigid?shelf=fantasy">fantasy</a>, 
              <a class="actionLinkLite" href="/review/list/886144-brigid?shelf=middle-grade">middle-grade</a>, 
              <a class="actionLinkLite" href="/review/list/886144-brigid?shelf=favorites">favorites</a>, 
              <a class="actionLinkLite" href="/review/list/886144-brigid?shelf=superpowers">superpowers</a>
          </div>
