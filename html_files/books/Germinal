        $('bookCover_59145').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_59145').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_59145').observe('prototip:hidden', function () {
