<div id="review_750249072" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/750249072" />
    <a title="Camie" class="left imgcol" href="/user/show/7399266-camie"><img alt="Camie" src="https://images.gr-assets.com/users/1571025937p2/7399266.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/750249072?book_show_action=true">Oct 26, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Camie" class="user" itemprop="url" name="Camie" href="/user/show/7399266-camie">Camie</a>
      </span>

