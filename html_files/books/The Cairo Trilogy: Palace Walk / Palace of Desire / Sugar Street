        $('bookCover_3371137').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_3371137').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
