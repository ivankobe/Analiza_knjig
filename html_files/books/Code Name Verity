      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_21'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/11925514-code-name-verity?rating=\">all <span class=\"greyText\">(326257)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/11925514-code-name-verity?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;K3ZuzAU8fzq+5gHV0/blU3p9lLUWZCVRP5IwpHYsxphDTW/vX6ZEcT68wWKdwOU2FF8gvxQe3WHtqUhfDwt9Rw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(42831)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/11925514-code-name-verity?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;SLiwxl4RF+GQyAgBb5tPsQtc0K1kAKI7iBepZGdOcXMgg7HlBIssqhCSyLYhrU/UZX5kp2Z6WgtaLNGfHmnKrA==&#39;)}); return false;\">4 stars <span class=\"greyText\">(36075)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n       