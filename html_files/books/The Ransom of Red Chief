        $('bookCover_33023960').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_33023960').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_33023960').observe('prototip:hidden', function () {
