        $('bookCover_920649').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_920649').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
