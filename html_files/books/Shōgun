          $$('div.prototip').each(function (e) {
            if ($('edition_52382796').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_52382796').observe('prototip:hidden', function () {
