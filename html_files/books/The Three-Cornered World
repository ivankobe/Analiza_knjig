<div id="review_716798155" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/716798155" />
    <a title="Michael" class="left imgcol" href="/user/show/3403278-michael"><img alt="Michael" src="https://images.gr-assets.com/users/1604899399p2/3403278.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/716798155?book_show_action=true">Sep 10, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Michael" class="user" itemprop="url" name="Michael" href="/user/show/3403278-michael">Michael</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="really liked it"><span size="15x15" class="staticStar p10">really liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/3403278-michael?shelf=aa-japanlit">aa-japanlit</a>, 
              <a class="actionLinkLite" href="/review/list/3403278-michael?shelf=zz1906-1910">zz1906-1910</a>, 
              <a class="actionLinkLite" href="/review/list/3403278-michael?shelf=translation">translation</a>, 
              <a class="actionLinkLite" href="/review/list/3403278-michael?shelf=modernlit">modernlit</a>, 
              <a class="actionLinkLite" href="/review/list/3403278-michael?shelf=aa-asialit">aa-asialit</a>, 
              <a class="actionLinkLite" href="/review/list/3403278-michael?shelf=soseki-natsume">soseki-natsume</a>, 
              <a class="actionLinkLite" href="/review/list/3403278-michael?shelf=art-theory">art-theory</a>, 
              <a class="actionLinkLite" href="/review/list/3403278-michael?shelf=penguin-classics">penguin-classics</a>, 
