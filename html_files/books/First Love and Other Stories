        $('bookCover_27822').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_27822').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
