  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/670157749?book_show_action=true">Jul 17, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Marnie" class="user" itemprop="url" name="Marnie" href="/user/show/18335772-marnie">Marnie</a>
