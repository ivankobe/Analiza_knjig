        $('bookCover_15790883').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_15790883').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
