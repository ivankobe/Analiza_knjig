  <div class="friendReviews elementListBrown" >
    <div class="section">
      

<div id="review_1437997930" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1437997930" />
    <a title="Elyse  Walters" class="left imgcol" href="/user/show/597461-elyse-walters"><img alt="Elyse  Walters" src="https://images.gr-assets.com/users/1514246949p2/597461.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1437997930?book_show_action=true">Nov 08, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Elyse  Walters" class="user" itemprop="url" name="Elyse  Walters" href="/user/show/597461-elyse-walters">Elyse  Walters</a>
