        $('bookCover_33124137').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_33124137').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
