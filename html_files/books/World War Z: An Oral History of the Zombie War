        $('bookCover_18007564').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_18007564').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
