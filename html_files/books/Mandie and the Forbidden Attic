        $('bookCover_497161').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_497161').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
