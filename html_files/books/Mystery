        $('bookCover_11549').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_11549').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
