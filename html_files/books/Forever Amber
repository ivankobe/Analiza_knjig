<div id="review_562926103" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/562926103" />
    <a title="``Laurie" class="left imgcol" href="/user/show/18430919-laurie"><img alt="``Laurie" src="https://images.gr-assets.com/users/1394490737p2/18430919.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/562926103?book_show_action=true">Mar 16, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="``Laurie" class="user" itemprop="url" name="``Laurie" href="/user/show/18430919-laurie">``Laurie</a>
