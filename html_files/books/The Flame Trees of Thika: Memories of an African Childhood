      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_429232').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_429232').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_429232').observe('prototip:hidden', function () {
