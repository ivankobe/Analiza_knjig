        $('bookCover_65091').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_65091').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
