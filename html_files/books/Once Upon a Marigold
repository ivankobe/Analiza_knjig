      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_544315').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_544315').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_544315').observe('prototip:hidden', function () {
