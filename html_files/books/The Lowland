<div id="review_564632747" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/564632747" />
    <a title="Ming" class="left imgcol" href="/user/show/3962630-ming"><img alt="Ming" src="https://images.gr-assets.com/users/1356496857p2/3962630.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/564632747?book_show_action=true">Mar 18, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Ming" class="user" itemprop="url" name="Ming" href="/user/show/3962630-ming">Ming</a>
