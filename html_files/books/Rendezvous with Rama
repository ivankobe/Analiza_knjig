<div id="review_1428086850" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1428086850" />
    <a title="Adrian" class="left imgcol" href="/user/show/22809267-adrian"><img alt="Adrian" src="https://images.gr-assets.com/users/1484242635p2/22809267.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1428086850?book_show_action=true">Dec 27, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Adrian" class="user" itemprop="url" name="Adrian" href="/user/show/22809267-adrian">Adrian</a>
