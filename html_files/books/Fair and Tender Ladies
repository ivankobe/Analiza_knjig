    <div class="js-dataTooltip" data-use-wtr-tooltip='true'>
        <div class="js-tooltipTrigger tooltipTrigger" data-resource-type='Book' data-resource-id='126873' data-placement='bottom-left'>
          <a href="/book/show/126873.The_Last_Girls"><img id="more_book_126873" alt="The Last Girls" title="The Last Girls" width="50" src="https://i.gr-assets.com/images/S/compressed.photo.goodreads.com/books/1333577608l/126873._SX98_.jpg" /></a>
