        $('bookCover_65959').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_65959').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
