      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_189201').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_189201').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_189201').observe('prototip:hidden', function () {
