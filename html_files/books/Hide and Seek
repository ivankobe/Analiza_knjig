        $('bookCover_68768').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_68768').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
