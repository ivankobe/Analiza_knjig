        $('bookCover_414641').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_414641').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
