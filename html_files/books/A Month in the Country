        $('bookCover_50710345').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_50710345').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
