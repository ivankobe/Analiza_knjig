<div id="review_45466093" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/45466093" />
    <a title="Heidi-Marie" class="left imgcol" href="/user/show/921817-heidi-marie"><img alt="Heidi-Marie" src="https://images.gr-assets.com/users/1203556177p2/921817.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/45466093?book_show_action=true">Feb 05, 2009</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Heidi-Marie" class="user" itemprop="url" name="Heidi-Marie" href="/user/show/921817-heidi-marie">Heidi-Marie</a>
