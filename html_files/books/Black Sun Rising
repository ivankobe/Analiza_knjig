        $('bookCover_133454').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_133454').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
