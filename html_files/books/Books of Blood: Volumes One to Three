      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_208161').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_208161').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_208161').observe('prototip:hidden', function () {
