        $('bookCover_7876300').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_7876300').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
