        $('bookCover_643792').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_643792').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
