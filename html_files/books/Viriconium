      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_40995').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_40995').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_40995').observe('prototip:hidden', function () {
