<div id="review_94754599" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/94754599" />
    <a title="Stephen" class="left imgcol" href="/user/show/1413439-stephen"><img alt="Stephen" src="https://images.gr-assets.com/users/1311616811p2/1413439.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/94754599?book_show_action=true">Mar 18, 2010</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Stephen" class="user" itemprop="url" name="Stephen" href="/user/show/1413439-stephen">Stephen</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/1413439-stephen?shelf=classics">classics</a>, 
              <a class="actionLinkLite" href="/review/list/1413439-stephen?shelf=mystery">mystery</a>, 
              <a class="actionLinkLite" href="/review/list/1413439-stephen?shelf=literature">literature</a>, 
              <a class="actionLinkLite" href="/review/list/1413439-stephen?shelf=1980-1989">1980-1989</a>, 
              <a class="actionLinkLite" href="/review/list/1413439-stephen?shelf=all-time-favorites">all-time-favorites</a>, 
              <a class="actionLinkLite" href="/review/list/1413439-stephen?shelf=historical-fiction">historical-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/1413439-stephen?shelf=sherlockian">sherlockian</a>, 
