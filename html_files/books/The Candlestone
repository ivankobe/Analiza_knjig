        $('bookCover_616694').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_616694').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
