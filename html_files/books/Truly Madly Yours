  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/127198159?book_show_action=true">Oct 20, 2010</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="valee" class="user" itemprop="url" name="valee" href="/user/show/2320890-valee">valee</a>
