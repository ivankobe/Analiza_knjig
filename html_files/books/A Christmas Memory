        $('bookCover_21412168').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_21412168').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
