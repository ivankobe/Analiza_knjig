<div id="review_198895155" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/198895155" />
    <a title="Kim" class="left imgcol" href="/user/show/4026072-kim"><img alt="Kim" src="https://images.gr-assets.com/users/1458609397p2/4026072.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/198895155?book_show_action=true">Aug 15, 2011</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Kim" class="user" itemprop="url" name="Kim" href="/user/show/4026072-kim">Kim</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/4026072-kim?shelf=male-author">male-author</a>, 
              <a class="actionLinkLite" href="/review/list/4026072-kim?shelf=non-fiction">non-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/4026072-kim?shelf=medical">medical</a>, 
              <a class="actionLinkLite" href="/review/list/4026072-kim?shelf=horror">horror</a>, 
              <a class="actionLinkLite" href="/review/list/4026072-kim?shelf=usa">usa</a>, 
              <a class="actionLinkLite" href="/review/list/4026072-kim?shelf=scientific">scientific</a>, 
              <a class="actionLinkLite" href="/review/list/4026072-kim?shelf=1980s">1980s</a>
          </div>
