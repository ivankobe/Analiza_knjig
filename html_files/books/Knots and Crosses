        $('bookCover_1182531').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_1182531').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_1182531').observe('prototip:hidden', function () {
