        $('bookCover_51018114').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_51018114').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
