      <a class="uitext" rel="nofollow" id="span_class_gr-hyperlink_more_filters_span_tip_140" style="cursor: pointer; " href="#" onclick="return false"><span class="gr-hyperlink">More filters</span></a><script>
//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_140'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/31837.The_Consolation_of_Philosophy?rating=\">all <span class=\"greyText\">(33991)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/31837.The_Consolation_of_Philosophy?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;Tk1GsfLZz0gRtnV3+EXhYugxoE0g4ivbh27jnaUj+XgLSp8eWxPexktLkEjNRpIqWoc+xok1KETVhkrrX9sW7g==&#39;)}); return false;\">5 stars <span class=\"greyText\">(4493)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/31837.The_Consolation_of_Philosophy?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;CawF8rf9pdPdcEoPq/zg0cdudr5zJ27evLeieLMD6gpMq9xdHje0XYeNrzCe/5OZddjoNdrwbUHuXwsOSfsFnA==&#39;)}); return false;\">4 stars <span class=\"greyText\">(4072)<\/span><\/a>\n                  <span class=\"loadingA