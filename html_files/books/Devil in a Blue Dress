  <div data-react-class="ReactComponents.ShareDialog" data-react-props="{&quot;signedIn&quot;:false,&quot;signInUrl&quot;:&quot;/user/sign_in&quot;,&quot;social&quot;:{&quot;inModal&quot;:{&quot;facebook&quot;:true,&quot;twitter&quot;:true,&quot;pinterest&quot;:true,&quot;copyLink&quot;:false},&quot;outsideModal&quot;:{&quot;facebook&quot;:true,&quot;twitter&quot;:true,&quot;pinterest&quot;:true,&quot;copyLink&quot;:false},&quot;fbOptions&quot;:{&quot;name&quot;:&quot;Devil in a Blue Dress by Walter Mosley&quot;,&quot;caption&quot;:&quot;goodreads.com&quot;,&quot;description&quot;:&quot;In Los Angeles of the late 1940s, Easy Rawlins, a black war veteran, has just been fired from his job at a defense plant. Easy is drinking in a friend&#39;s bar, wondering how he&#39;ll meet his mortgage, when a white man in a linen suit walks in, offering good...&quot;,&quot;link&quot;:&quot;https://www.goodreads.com/book/show/37100.Devil_in_a_Blue_Dress&quot;,&quot;picture&quot;:&quot;https://i.gr-assets.com/images/S/compressed.photo.goodreads.com/books/1336545202l/37100._SY75_.jpg&quot;},&quot;twitterOptions&quot;:{&quot;text&quot;:&quot;Devil in a Blue Dress by Walter Mosley&quot;,&quot;url&quot;:&quot;https://www.goodreads.com/book/show/37100.Devil_in_a_Blue_Dress&quot;,&quot;via&quot;:&quot;goodreads&quot;},&quot;pinterestOptions&quot;:{&quot;description&quot;:&quot;Devil in a Blue Dress by Walter Mosley&quot;,&quot;url&quot;:&quot;https://www.goodreads.com/book/show/37100.Devil_in_a_Blue_Dress&quot;,&quot;media&quot;:&quot;https://i.gr-assets.com/images/S/compressed.photo.goodreads.com/books/1336545202l/37100.jpg&quot;}},&quot;sharingData&quot;:{&quot;resourceTypeFriendlyText&quot;:&quot;book&quot;,&quot;resourceId&quot;:37100},&quot;includePreview&quot;:true,&quot;previewData&quot;:{&quot;author&quot;:{&quot;name&quot;:&quot;Walter Mosley&quot;,&quot;isGoodreadsAuthor&quot;:false},&quot;rating&quot;:&quot;3.89&quot;,&quot;title&quot;:&quot;Devil in a Blue Dress (Easy Rawlins, #1)&quot;,&quot;imageUrl&quot;:&quot;https://i.gr-assets.com/images/S/compressed.photo.goodreads.com/books/1336545202i/37100._UX75_.jpg&quot;,&quot;ratingsCount&quot;:21945,&quot;textReviewsCount&quot;:1569}}"><div data-reactid=".1odjoik4sps" data-react-checksum="404082662"><div class="shareModuleBar" data-reactid=".1odjoik4sps.1"><a class="modalTrigger modalTrigger--shareModule" role="button" aria-expanded="false" aria-haspopup="true" data-reactid=".1odjoik4sps.1.0"><button class="gr-shareButton" type="button" data-reactid=".1odjoik4sps.1.0.0"><span class="gr-shareButton__innerWrapper" data-reactid=".1odjoik4sps.1.0.0.0"><span class="gr-shareButton__icon" data-reactid=".1odjoik4sps.1.0.0.0.0"></span><span class="gr-shareButton__textLabel" data-reactid=".1odjoik4sps.1.0.0.0.1">Share</span></span></button></a><div class="shareSocialButtons shareSocialButtons--shareBar" data-reactid=".1odjoik4sps.1.1"><button class="shareSocialButtons__button shareSocialButtons__button--shareBar shareSocialButtons__button--facebook" aria-label="Share to Facebook" type="button" data-reactid=".1odjoik4sps.1.1.0"></button><button class="shareSocialButtons__button shareSocialButtons__button--shareBar shareSocialButtons__button--twitter" aria-label="Share to Twitter" type="button" data-reactid=".1odjoik4sps.1.1.1"></button><button class="shareSocialButtons__button shareSocialButtons__button--shareBar shareSocialButtons__button--pinterest" aria-label="Share to Pinterest" type="button" data-reactid=".1odjoik4sps.1.1.2"></button></div></div></div></div>


