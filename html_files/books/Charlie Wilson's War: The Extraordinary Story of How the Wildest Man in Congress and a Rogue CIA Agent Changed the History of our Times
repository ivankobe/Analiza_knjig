<div id="review_2160516242" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2160516242" />
    <a title="W" class="left imgcol" href="/user/show/49365462-w"><img alt="W" src="https://images.gr-assets.com/users/1610208667p2/49365462.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2160516242?book_show_action=true">Oct 18, 2019</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="W" class="user" itemprop="url" name="W" href="/user/show/49365462-w">W</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/49365462-w?shelf=politics">politics</a>, 
              <a class="actionLinkLite" href="/review/list/49365462-w?shelf=seen-as-movies">seen-as-movies</a>, 
              <a class="actionLinkLite" href="/review/list/49365462-w?shelf=biography">biography</a>, 
              <a class="actionLinkLite" href="/review/list/49365462-w?shelf=favorites">favorites</a>, 
