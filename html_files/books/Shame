<div id="review_550885083" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/550885083" />
    <a title="David Haberlah" class="left imgcol" href="/user/show/10998731-david-haberlah"><img alt="David Haberlah" src="https://images.gr-assets.com/users/1342437317p2/10998731.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/550885083?book_show_action=true">Mar 03, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="David Haberlah" class="user" itemprop="url" name="David Haberlah" href="/user/show/10998731-david-haberlah">David Haberlah</a>
