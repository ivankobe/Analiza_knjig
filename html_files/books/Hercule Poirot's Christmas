        $('bookCover_326192').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_326192').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_326192').observe('prototip:hidden', function () {
