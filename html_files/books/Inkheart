      });

      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_292110').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_292110').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_292110').observe('prototip:hidden', function () {
