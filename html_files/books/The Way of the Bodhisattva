<div id="review_774505122" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/774505122" />
    <a title="Michael" class="left imgcol" href="/user/show/3403278-michael"><img alt="Michael" src="https://images.gr-assets.com/users/1604899399p2/3403278.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/774505122?book_show_action=true">Nov 26, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Michael" class="user" itemprop="url" name="Michael" href="/user/show/3403278-michael">Michael</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/3403278-michael?shelf=translation">translation</a>, 
              <a class="actionLinkLite" href="/review/list/3403278-michael?shelf=aa-asialit">aa-asialit</a>, 
              <a class="actionLinkLite" href="/review/list/3403278-michael?shelf=buddhism-etc">buddhism-etc</a>, 
              <a class="actionLinkLite" href="/review/list/3403278-michael?shelf=aa-indialit">aa-indialit</a>, 
              <a class="actionLinkLite" href="/review/list/3403278-michael?shelf=philosophy-indic">philosophy-indic</a>, 
