      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_26'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/53005757-when-you-get-the-chance?rating=\">all <span class=\"greyText\">(4733)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/53005757-when-you-get-the-chance?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;EAzoeOgzIZeEfwXelZL/Ul9fm7bAXymsPOEiKceKnk/ANHcaSEmhkrxi1jkpEgdxwJ7bMHnkL8Rn5OBGfsmA0w==&#39;)}); return false;\">5 stars <span class=\"greyText\">(59)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/53005757-when-you-get-the-chance?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;W+sRUiHC+65ewQwuGpqqi3jSLd12KeT5n6b8o3HLm/iL044wgbh7q2bc38mmGlKo5xNtW8+S4pHEoz7MyIiFZA==&#39;)}); return false;\">4 stars <span class=\"greyText\">(105)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/