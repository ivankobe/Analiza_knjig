<div id="review_3322293003" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/3322293003" />
    <a title="kory." class="left imgcol" href="/user/show/61034409-kory"><img alt="kory." src="https://images.gr-assets.com/users/1625373285p2/61034409.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/3322293003?book_show_action=true">May 11, 2021</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="kory." class="user" itemprop="url" name="kory." href="/user/show/61034409-kory">kory.</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="liked it"><span size="15x15" class="staticStar p10">liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>



        

