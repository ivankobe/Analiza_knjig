        $('bookCover_40207').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_40207').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_40207').observe('prototip:hidden', function () {
