      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_10223049').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_10223049').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_10223049').observe('prototip:hidden', function () {
