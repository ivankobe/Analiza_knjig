      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Ellie" class="user" itemprop="url" name="Ellie" href="/user/show/2908629-ellie">Ellie</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/2908629-ellie?shelf=poetry">poetry</a>, 
              <a class="actionLinkLite" href="/review/list/2908629-ellie?shelf=socio-political">socio-political</a>, 
              <a class="actionLinkLite" href="/review/list/2908629-ellie?shelf=race">race</a>, 
              <a class="actionLinkLite" href="/review/list/2908629-ellie?shelf=2019indchal">2019indchal</a>, 
              <a class="actionLinkLite" href="/review/list/2908629-ellie?shelf=library">library</a>
          </div>
