        $('bookCover_10567').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_10567').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
