        $('bookCover_357').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_357').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
