      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Sara" class="user" itemprop="url" name="Sara" href="/user/show/1037407-sara">Sara</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="really liked it"><span size="15x15" class="staticStar p10">really liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/1037407-sara?shelf=non-fiction">non-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/1037407-sara?shelf=philosophy-religion">philosophy-religion</a>, 
              <a class="actionLinkLite" href="/review/list/1037407-sara?shelf=music">music</a>, 
              <a class="actionLinkLite" href="/review/list/1037407-sara?shelf=spirituality">spirituality</a>, 
