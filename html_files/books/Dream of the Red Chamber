      <a class="uitext" rel="nofollow" id="span_class_gr-hyperlink_more_filters_span_tip_627" style="cursor: pointer; " href="#" onclick="return false"><span class="gr-hyperlink">More filters</span></a><script>
//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_627'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/535739.Dream_of_the_Red_Chamber?rating=\">all <span class=\"greyText\">(24893)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/535739.Dream_of_the_Red_Chamber?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;4paCNLQF0vc27h+sInvxhEhOPLCQn74rQ1sVMQGsLl6atsrV5vU3n4lxaF32zDDXUHFqYo7i75TcMBZ8A7e0gw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(2023)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/535739.Dream_of_the_Red_Chamber?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;4QleNt4d6SqHjq4oDu6qRiP7uHIPUNAVI76eNLPMj6aZKRbXjO0MQjgR2dnaWWsVO8TuoBEtgaq81Z15sdcVew==&#39;)}); return false;\">4 stars <span class=\"greyText\">(1061)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><