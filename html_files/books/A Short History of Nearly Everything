<div id="review_3" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/3" />
    <a title="Otis Chandler" class="left imgcol" href="/user/show/1-otis-chandler"><img alt="Otis Chandler" src="https://images.gr-assets.com/users/1506617226p2/1.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/3?book_show_action=true">Aug 19, 2006</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Otis Chandler" class="user" itemprop="url" name="Otis Chandler" href="/user/show/1-otis-chandler">Otis Chandler</a>
