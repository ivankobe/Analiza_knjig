<div id="review_765840529" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/765840529" />
    <a title="Neseli" class="left imgcol" href="/user/show/7368511-neseli"><img alt="Neseli" src="https://images.gr-assets.com/users/1541933510p2/7368511.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/765840529?book_show_action=true">Nov 15, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Neseli" class="user" itemprop="url" name="Neseli" href="/user/show/7368511-neseli">Neseli</a>
