<div id="review_1513552055" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1513552055" />
    <a title="Wendelle" class="left imgcol" href="/user/show/51581864-wendelle"><img alt="Wendelle" src="https://images.gr-assets.com/users/1560655739p2/51581864.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1513552055?book_show_action=true">Jan 17, 2016</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Wendelle" class="user" itemprop="url" name="Wendelle" href="/user/show/51581864-wendelle">Wendelle</a>
