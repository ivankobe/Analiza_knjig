          $$('div.prototip').each(function (e) {
            if ($('bookCover_43914093').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_43914093').observe('prototip:hidden', function () {
