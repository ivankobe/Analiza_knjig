  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1791300935?book_show_action=true">Mar 13, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Mariah Roze" class="user" itemprop="url" name="Mariah Roze" href="/user/show/22371819-mariah-roze">Mariah Roze</a>
