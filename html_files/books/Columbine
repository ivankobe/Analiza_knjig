      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_29'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/5632446-columbine?rating=\">all <span class=\"greyText\">(198909)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/5632446-columbine?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;HilxpMrtLsrz1esT/mC9/qCw0RZaSkNoX1nLDijy1XT7IcaaCERW9EYvGsBQlqQHpy+FsAMi7ITqjAj3brV0VQ==&#39;)}); return false;\">5 stars <span class=\"greyText\">(36696)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/5632446-columbine?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;2AeGb4IKZWK2wG6elUkcOaNO48EoKcjYTeBuYMupp2I9DzFRQKMdXAM6n007vwXApNG3Z3FBZzT4Na2Zje4GQw==&#39;)}); return false;\">4 stars <span class=\"greyText\">(29909)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\