      });

      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_13797981').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_13797981').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_13797981').observe('prototip:hidden', function () {
