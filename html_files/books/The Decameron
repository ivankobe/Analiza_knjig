<div id="review_1900630913" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1900630913" />
    <a title="Morgan" class="left imgcol" href="/user/show/7366675-morgan"><img alt="Morgan" src="https://images.gr-assets.com/users/1590151183p2/7366675.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1900630913?book_show_action=true">Apr 11, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Morgan" class="user" itemprop="url" name="Morgan" href="/user/show/7366675-morgan">Morgan</a>
