      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_2350609').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_2350609').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_2350609').observe('prototip:hidden', function () {
