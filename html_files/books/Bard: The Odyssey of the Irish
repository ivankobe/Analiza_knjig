<div id="review_1802992515" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1802992515" />
    <a title="Sharkie" class="left imgcol" href="/user/show/23422504-sharkie"><img alt="Sharkie" src="https://images.gr-assets.com/users/1555445344p2/23422504.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1802992515?book_show_action=true">Sep 21, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Sharkie" class="user" itemprop="url" name="Sharkie" href="/user/show/23422504-sharkie">Sharkie</a>
