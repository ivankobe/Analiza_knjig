<div id="review_3436384771" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/3436384771" />
    <a title="Becky Loader" class="left imgcol" href="/user/show/3402896-becky-loader"><img alt="Becky Loader" src="https://images.gr-assets.com/users/1347133893p2/3402896.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/3436384771?book_show_action=true">Jul 14, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Becky Loader" class="user" itemprop="url" name="Becky Loader" href="/user/show/3402896-becky-loader">Becky Loader</a>
