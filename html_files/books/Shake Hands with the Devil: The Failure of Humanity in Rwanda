  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2972794927?book_show_action=true">Sep 10, 2019</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Ian" class="user" itemprop="url" name="Ian" href="/user/show/102468787-ian">Ian</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/102468787-ian?shelf=history">history</a>, 
              <a class="actionLinkLite" href="/review/list/102468787-ian?shelf=memoirs">memoirs</a>, 
              <a class="actionLinkLite" href="/review/list/102468787-ian?shelf=non-fiction">non-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/102468787-ian?shelf=favorites">favorites</a>
