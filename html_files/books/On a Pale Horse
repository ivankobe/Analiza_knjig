        $('bookCover_76661').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_76661').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_76661').observe('prototip:hidden', function () {
