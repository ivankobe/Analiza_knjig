          $$('div.prototip').each(function (e) {
            if ($('bookCover_57024483').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_57024483').observe('prototip:hidden', function () {
