        $('bookCover_116053').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_116053').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
