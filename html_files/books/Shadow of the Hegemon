        $('bookCover_116451').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_116451').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_116451').observe('prototip:hidden', function () {
