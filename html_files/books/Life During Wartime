        $('bookCover_432').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_432').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
