        $('bookCover_14000').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_14000').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
