        $('bookCover_176802').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_176802').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
