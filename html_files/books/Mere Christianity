        $('bookCover_103610').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_103610').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
