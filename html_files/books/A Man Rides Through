        $('bookCover_378639').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_378639').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
