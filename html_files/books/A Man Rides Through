<div id="review_729329573" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/729329573" />
    <a title="Angela" class="left imgcol" href="/user/show/1183027-angela"><img alt="Angela" src="https://s.gr-assets.com/assets/nophoto/user/f_50x66-6a03a5c12233c941481992b82eea8d23.png" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/729329573?book_show_action=true">Sep 27, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Angela" class="user" itemprop="url" name="Angela" href="/user/show/1183027-angela">Angela</a>
