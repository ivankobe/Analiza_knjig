        $('bookCover_11378463').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_11378463').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
