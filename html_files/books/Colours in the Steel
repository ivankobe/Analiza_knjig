  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1126680256?book_show_action=true">Sep 22, 2018</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Ignasis" class="user" itemprop="url" name="Ignasis" href="/user/show/36735676-ignasis">Ignasis</a>
