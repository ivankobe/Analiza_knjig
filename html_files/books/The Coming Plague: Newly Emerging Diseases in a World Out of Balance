<div id="review_522513133" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/522513133" />
    <a title="Jen Williamson" class="left imgcol" href="/user/show/9865970-jen-williamson"><img alt="Jen Williamson" src="https://images.gr-assets.com/users/1357255638p2/9865970.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/522513133?book_show_action=true">Jan 31, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Jen Williamson" class="user" itemprop="url" name="Jen Williamson" href="/user/show/9865970-jen-williamson">Jen Williamson</a>
