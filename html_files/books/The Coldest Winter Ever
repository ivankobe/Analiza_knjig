      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_298019').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_298019').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_298019').observe('prototip:hidden', function () {
