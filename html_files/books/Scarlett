  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/3098678?book_show_action=true">Jul 15, 2007</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Namrirru" class="user" itemprop="url" name="Namrirru" href="/user/show/188169-namrirru">Namrirru</a>
