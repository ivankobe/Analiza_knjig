<div id="review_31020991" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/31020991" />
    <a title="Traci" class="left imgcol" href="/user/show/1347778-traci"><img alt="Traci" src="https://images.gr-assets.com/users/1216607368p2/1347778.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/31020991?book_show_action=true">Aug 23, 2008</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Traci" class="user" itemprop="url" name="Traci" href="/user/show/1347778-traci">Traci</a>
