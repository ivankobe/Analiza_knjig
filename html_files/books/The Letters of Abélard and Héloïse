            if ($('edition_11502402').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_11502402').observe('prototip:hidden', function () {
