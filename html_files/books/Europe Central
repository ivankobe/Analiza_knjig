      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_548'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/12398.Europe_Central?rating=\">all <span class=\"greyText\">(12146)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/12398.Europe_Central?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;xxGOQJbDjxE0BbPqmh5Gshr7jWaT1QmFa3a9LwPd87alq7/HZJ9MN2OJh/xNAbre47KZCW3muS3IqVBp/Lqw2w==&#39;)}); return false;\">5 stars <span class=\"greyText\">(951)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/12398.Europe_Central?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;H57N+BwRYZElFw8X2HxtudESNL9BCnpqQ8Qv3iID9Kd9JPx/7k2it3KbOwEPY5HVKFsg0L85ysLgG8KY3WS3yg==&#39;)}); return false;\">4 stars <span class=\"greyText\">(836)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span cl