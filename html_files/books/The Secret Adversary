          $$('div.prototip').each(function (e) {
            if ($('edition_18073088').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_18073088').observe('prototip:hidden', function () {
