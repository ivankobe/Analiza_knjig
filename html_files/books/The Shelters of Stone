<div id="review_2298513194" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2298513194" />
    <a title="Gina" class="left imgcol" href="/user/show/28627991-gina"><img alt="Gina" src="https://images.gr-assets.com/users/1527390404p2/28627991.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2298513194?book_show_action=true">Feb 16, 2018</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Gina" class="user" itemprop="url" name="Gina" href="/user/show/28627991-gina">Gina</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/28627991-gina?shelf=fiction">fiction</a>, 
              <a class="actionLinkLite" href="/review/list/28627991-gina?shelf=historical-fiction">historical-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/28627991-gina?shelf=prehistoric">prehistoric</a>, 
