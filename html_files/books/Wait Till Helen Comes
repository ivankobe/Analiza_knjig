      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_50160981').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_50160981').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_50160981').observe('prototip:hidden', function () {
