        $('bookCover_6965998').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_6965998').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
