            if ($('edition_40019748').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_40019748').observe('prototip:hidden', function () {
        $$('span.elementTwo').each(function (e) {
