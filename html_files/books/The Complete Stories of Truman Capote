        $('bookCover_431988').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_431988').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
