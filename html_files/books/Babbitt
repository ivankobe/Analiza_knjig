      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_26036450').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_26036450').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_26036450').observe('prototip:hidden', function () {
