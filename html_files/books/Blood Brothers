      });

      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_43558400').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_43558400').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_43558400').observe('prototip:hidden', function () {
