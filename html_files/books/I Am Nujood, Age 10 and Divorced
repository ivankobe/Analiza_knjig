        $('edition_8139775').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_8139775').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
