        $('bookCover_3322636').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_3322636').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
