            Shelves:
              <a class="actionLinkLite" href="/review/list/61659069-bren?shelf=baking-and-cooking">baking-and-cooking</a>, 
              <a class="actionLinkLite" href="/review/list/61659069-bren?shelf=chick-lit">chick-lit</a>, 
              <a class="actionLinkLite" href="/review/list/61659069-bren?shelf=enthralling">enthralling</a>, 
              <a class="actionLinkLite" href="/review/list/61659069-bren?shelf=fun-books">fun-books</a>, 
              <a class="actionLinkLite" href="/review/list/61659069-bren?shelf=romance">romance</a>, 
              <a class="actionLinkLite" href="/review/list/61659069-bren?shelf=read-and-reviewed">read-and-reviewed</a>, 
