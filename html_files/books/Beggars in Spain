      <a class="uitext" rel="nofollow" id="span_class_gr-hyperlink_more_filters_span_tip_13" style="cursor: pointer; " href="#" onclick="return false"><span class="gr-hyperlink">More filters</span></a><script>
//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_13'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/68333.Beggars_in_Spain?rating=\">all <span class=\"greyText\">(16239)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/68333.Beggars_in_Spain?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;zqv+l2UkI6n2pbENKSIgdeOfbjAQNollTO7h0/nChwoWntibnA7uF9+vzjuarliYHAPYokS8/ERovnjTFON34Q==&#39;)}); return false;\">5 stars <span class=\"greyText\">(2377)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/68333.Beggars_in_Spain?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;CGTtxwHK1MOj7VjaygN9W+UrJqY0ErmHuIa7dZln1ibQUcvL+OAZfYrnJ+x5jwW2GreQNGCYzKac1iJ1dEYmzQ==&#39;)}); return false;\">4 stars <span class=\"greyText\">(3020)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <