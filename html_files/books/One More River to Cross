        $('edition_18942546').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_18942546').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_18942546').observe('prototip:hidden', function () {
