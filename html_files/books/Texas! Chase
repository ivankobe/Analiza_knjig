<div id="review_1176129342" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1176129342" />
    <a title="Didi" class="left imgcol" href="/user/show/6082482-didi"><img alt="Didi" src="https://images.gr-assets.com/users/1459297426p2/6082482.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1176129342?book_show_action=true">Jan 21, 2015</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Didi" class="user" itemprop="url" name="Didi" href="/user/show/6082482-didi">Didi</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/6082482-didi?shelf=angst-in-my-pants">angst-in-my-pants</a>, 
              <a class="actionLinkLite" href="/review/list/6082482-didi?shelf=i-love-u-love-me-back">i-love-u-love-me-back</a>, 
              <a class="actionLinkLite" href="/review/list/6082482-didi?shelf=romance">romance</a>, 
              <a class="actionLinkLite" href="/review/list/6082482-didi?shelf=favorites">favorites</a>, 
              <a class="actionLinkLite" href="/review/list/6082482-didi?shelf=unable-to-put-down">unable-to-put-down</a>, 
              <a class="actionLinkLite" href="/review/list/6082482-didi?shelf=library-loan">library-loan</a>, 
              <a class="actionLinkLite" href="/review/list/6082482-didi?shelf=alpha-male">alpha-male</a>, 
              <a class="actionLinkLite" href="/review/list/6082482-didi?shelf=tragic-loss">tragic-loss</a>
