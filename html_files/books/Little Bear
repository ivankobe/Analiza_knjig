        $('bookCover_833549').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_833549').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
