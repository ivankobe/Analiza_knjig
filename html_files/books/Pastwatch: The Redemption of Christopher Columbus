<div id="review_2426237032" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2426237032" />
    <a title="Maureen" class="left imgcol" href="/user/show/680205-maureen"><img alt="Maureen" src="https://images.gr-assets.com/users/1620996481p2/680205.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2426237032?book_show_action=true">Jan 09, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Maureen" class="user" itemprop="url" name="Maureen" href="/user/show/680205-maureen">Maureen</a>
