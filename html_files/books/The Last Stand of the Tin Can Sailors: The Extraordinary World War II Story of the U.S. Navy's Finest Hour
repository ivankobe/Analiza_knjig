<div id="review_1174288245" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1174288245" />
    <a title="Jack" class="left imgcol" href="/user/show/1847134-jack"><img alt="Jack" src="https://images.gr-assets.com/users/1428861845p2/1847134.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1174288245?book_show_action=true">Jan 19, 2015</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Jack" class="user" itemprop="url" name="Jack" href="/user/show/1847134-jack">Jack</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/1847134-jack?shelf=cno">cno</a>, 
              <a class="actionLinkLite" href="/review/list/1847134-jack?shelf=professional-military-education">professional-military-education</a>, 
              <a class="actionLinkLite" href="/review/list/1847134-jack?shelf=history-wwii-american">history-wwii-american</a>, 
              <a class="actionLinkLite" href="/review/list/1847134-jack?shelf=military-history-general">military-history-general</a>, 
              <a class="actionLinkLite" href="/review/list/1847134-jack?shelf=military-history-american">military-history-american</a>, 
              <a class="actionLinkLite" href="/review/list/1847134-jack?shelf=world-war-ii-japan">world-war-ii-japan</a>, 
