        $('bookCover_640900').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_640900').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
