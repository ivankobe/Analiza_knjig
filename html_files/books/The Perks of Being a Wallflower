      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_752'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/22628.The_Perks_of_Being_a_Wallflower?rating=\">all <span class=\"greyText\">(2280628)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/22628.The_Perks_of_Being_a_Wallflower?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;fc6SAsy+nASW0D+z9Ya6NoS8fQQhIN/4Maaqee2HTAgyPQVpBCTyhYkm/dj22KaEmZ+vF1l3yMvz59howH75/w==&#39;)}); return false;\">5 stars <span class=\"greyText\">(658116)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/22628.The_Perks_of_Being_a_Wallflower?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;cNodCarFCa/KPvPTycNG+6qxK04QVgicRJ1SOjN158A/KYpiYl9nLtXIMbjKnVpJt5L5XWgBH6+G3CArHoxSNw==&#39;)}); return false;\">4 stars <span class=\"greyText\">(428648)<\/span><\/a>\n                  <span clas