<div id="review_2351816119" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2351816119" />
    <a title="Esther Soberanis" class="left imgcol" href="/user/show/79457407-esther-soberanis"><img alt="Esther Soberanis" src="https://s.gr-assets.com/assets/nophoto/user/u_50x66-632230dc9882b4352d753eedf9396530.png" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2351816119?book_show_action=true">Apr 08, 2018</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Esther Soberanis" class="user" itemprop="url" name="Esther Soberanis" href="/user/show/79457407-esther-soberanis">Esther Soberanis</a>
