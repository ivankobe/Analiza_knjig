<div id="review_719412911" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/719412911" />
    <a title="Allie Riley" class="left imgcol" href="/user/show/17643421-allie-riley"><img alt="Allie Riley" src="https://images.gr-assets.com/users/1522840920p2/17643421.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/719412911?book_show_action=true">Sep 14, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Allie Riley" class="user" itemprop="url" name="Allie Riley" href="/user/show/17643421-allie-riley">Allie Riley</a>
