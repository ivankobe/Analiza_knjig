      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_908'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/6547187-first-drop-of-crimson?rating=\">all <span class=\"greyText\">(88470)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/6547187-first-drop-of-crimson?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;/D6EnY9TiZ2w5XiSY3ogc5p9eMxGwSvsoe0I9xezUNraaW6ghwYqrrrgFbWwrSXrlGj/3jGCnvwzNaHzBjKiDA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(23970)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/6547187-first-drop-of-crimson?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;cBtDF6qbqGB+r7g5Uxy0CoPsto9imPLXVuPVA5nlCUtWTKkqos4LU3Sq1R6Ay7GSjfkxnRXbR8fEO3wHiGT7nQ==&#39;)}); return false;\">4 stars <span class=\"greyText\">(19199)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/sp