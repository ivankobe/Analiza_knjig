<div id="review_1793908341" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1793908341" />
    <a title="Hank" class="left imgcol" href="/user/show/16803629-hank"><img alt="Hank" src="https://images.gr-assets.com/users/1510365058p2/16803629.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1793908341?book_show_action=true">Oct 29, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Hank" class="user" itemprop="url" name="Hank" href="/user/show/16803629-hank">Hank</a>
