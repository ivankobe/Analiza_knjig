<div id="review_1223942104" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1223942104" />
    <a title="Susana" class="left imgcol" href="/user/show/1205030-susana"><img alt="Susana" src="https://images.gr-assets.com/users/1524641532p2/1205030.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1223942104?book_show_action=true">Jan 22, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Susana" class="user" itemprop="url" name="Susana" href="/user/show/1205030-susana">Susana</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was ok"><span size="15x15" class="staticStar p10">it was ok</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>

          <span class="greyText">&nbsp;&middot;&nbsp;</span>
          <a class="lightGreyText" title="Paperback 9789722354493" href="/book/show/24469717-os-anos-perdidos">review of another edition</a>


        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/1205030-susana?shelf=fantasia">fantasia</a>, 
              <a class="actionLinkLite" href="/review/list/1205030-susana?shelf=juvenis">juvenis</a>, 
              <a class="actionLinkLite" href="/review/list/1205030-susana?shelf=norte-americanos">norte-americanos</a>, 
              <a class="actionLinkLite" href="/review/list/1205030-susana?shelf=2017">2017</a>, 
              <a class="actionLinkLite" href="/review/list/1205030-susana?shelf=oferecidos">oferecidos</a>, 
              <a class="actionLinkLite" href="/review/list/1205030-susana?shelf=desist%C3%AAncias">desistências</a>
          </div>
