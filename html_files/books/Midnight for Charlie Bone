      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_106131').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_106131').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_106131').observe('prototip:hidden', function () {
