        $('bookCover_7714').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_7714').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
