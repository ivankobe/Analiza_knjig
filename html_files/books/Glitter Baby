        $('bookCover_306364').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_306364').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
