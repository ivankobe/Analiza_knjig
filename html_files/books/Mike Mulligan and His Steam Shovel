<div id="review_301113354" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/301113354" />
    <a title="Fjóla" class="left imgcol" href="/user/show/5395741-fj-la"><img alt="Fjóla" src="https://images.gr-assets.com/users/1315980159p2/5395741.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/301113354?book_show_action=true">Mar 26, 2012</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Fjóla" class="user" itemprop="url" name="Fjóla" href="/user/show/5395741-fj-la">Fjóla</a>
