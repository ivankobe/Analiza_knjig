        $('bookCover_1464838').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_1464838').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
