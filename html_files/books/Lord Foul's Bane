        $('bookCover_1018538').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_1018538').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
