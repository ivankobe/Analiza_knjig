  <div class="friendReviews elementListBrown" >
    <div class="section">
      

<div id="review_19741018" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/19741018" />
    <a title="Amanda" class="left imgcol" href="/user/show/168069-amanda"><img alt="Amanda" src="https://images.gr-assets.com/users/1183438407p2/168069.jpg" /></a>

  <div class="left bodycol">
