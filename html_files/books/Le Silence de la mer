        $('bookCover_54224666').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_54224666').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_54224666').observe('prototip:hidden', function () {
        $$('span.elementTwo').each(function (e) {
