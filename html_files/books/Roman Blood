<div id="review_995479906" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/995479906" />
    <a title="Alicja" class="left imgcol" href="/user/show/4745220-alicja"><img alt="Alicja" src="https://images.gr-assets.com/users/1411681297p2/4745220.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/995479906?book_show_action=true">Jul 13, 2014</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Alicja" class="user" itemprop="url" name="Alicja" href="/user/show/4745220-alicja">Alicja</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>

          <span class="greyText">&nbsp;&middot;&nbsp;</span>
          <a class="lightGreyText" title="Paperback 9780312383244" href="/book/show/2423134.Roman_Blood">review of another edition</a>


        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/4745220-alicja?shelf=ancient-world">ancient-world</a>, 
              <a class="actionLinkLite" href="/review/list/4745220-alicja?shelf=historical-fiction">historical-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/4745220-alicja?shelf=minor-lgbt-themes">minor-lgbt-themes</a>, 
              <a class="actionLinkLite" href="/review/list/4745220-alicja?shelf=favorites">favorites</a>, 
              <a class="actionLinkLite" href="/review/list/4745220-alicja?shelf=arec-for-t">arec-for-t</a>, 
              <a class="actionLinkLite" href="/review/list/4745220-alicja?shelf=male-author">male-author</a>, 
              <a class="actionLinkLite" href="/review/list/4745220-alicja?shelf=ancient-rome">ancient-rome</a>, 
              <a class="actionLinkLite" href="/review/list/4745220-alicja?shelf=mystery">mystery</a>
          </div>
