        $('bookCover_40129439').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_40129439').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
