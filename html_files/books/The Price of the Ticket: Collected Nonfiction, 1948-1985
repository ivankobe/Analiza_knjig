      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Korri" class="user" itemprop="url" name="Korri" href="/user/show/30119-korri">Korri</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/30119-korri?shelf=africana">africana</a>, 
              <a class="actionLinkLite" href="/review/list/30119-korri?shelf=essays">essays</a>, 
              <a class="actionLinkLite" href="/review/list/30119-korri?shelf=race">race</a>, 
              <a class="actionLinkLite" href="/review/list/30119-korri?shelf=american-culture-and-history">american-culture-and-history</a>, 
              <a class="actionLinkLite" href="/review/list/30119-korri?shelf=white-supremacy">white-supremacy</a>
          </div>
