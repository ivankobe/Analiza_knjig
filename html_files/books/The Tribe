        $('bookCover_868730').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_868730').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
