      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Rebecca" class="user" itemprop="url" name="Rebecca" href="/user/show/5875398-rebecca">Rebecca</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>

          <span class="greyText">&nbsp;&middot;&nbsp;</span>
          <a class="lightGreyText" title="Paperback 9780812975406" href="/book/show/4955659-american-wife">review of another edition</a>


        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/5875398-rebecca?shelf=absolute-favorites">absolute-favorites</a>, 
              <a class="actionLinkLite" href="/review/list/5875398-rebecca?shelf=door-stoppers">door-stoppers</a>, 
              <a class="actionLinkLite" href="/review/list/5875398-rebecca?shelf=famous-wives">famous-wives</a>
          </div>
