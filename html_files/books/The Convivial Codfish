        $('bookCover_1010350').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_1010350').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
