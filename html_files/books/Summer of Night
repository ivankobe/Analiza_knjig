<div id="review_639602722" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/639602722" />
    <a title="Ctgt" class="left imgcol" href="/user/show/3787451-ctgt"><img alt="Ctgt" src="https://images.gr-assets.com/users/1524569344p2/3787451.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/639602722?book_show_action=true">Jun 12, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Ctgt" class="user" itemprop="url" name="Ctgt" href="/user/show/3787451-ctgt">Ctgt</a>
