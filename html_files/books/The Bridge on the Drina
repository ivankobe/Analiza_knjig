<div id="review_2199938147" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2199938147" />
    <a title="Lea" class="left imgcol" href="/user/show/38055348-lea"><img alt="Lea" src="https://images.gr-assets.com/users/1617207537p2/38055348.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2199938147?book_show_action=true">Nov 30, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Lea" class="user" itemprop="url" name="Lea" href="/user/show/38055348-lea">Lea</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/38055348-lea?shelf=fiction">fiction</a>, 
              <a class="actionLinkLite" href="/review/list/38055348-lea?shelf=history-historical-fiction">history-historical-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/38055348-lea?shelf=recommended">recommended</a>, 
              <a class="actionLinkLite" href="/review/list/38055348-lea?shelf=favourites">favourites</a>, 
              <a class="actionLinkLite" href="/review/list/38055348-lea?shelf=classic">classic</a>, 
