//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_540'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/147039.Dona_Flor_and_Her_Two_Husbands?rating=\">all <span class=\"greyText\">(19441)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/147039.Dona_Flor_and_Her_Two_Husbands?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;tODuZu+h0YZQNM9qS6FAWJrXjgmFO3Xmgysf3FEajOVJf7u8On+uiB+fyWNtJKOwu0JE02Odu2DCbJ54crcudQ==&#39;)}); return false;\">5 stars <span class=\"greyText\">(2552)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/147039.Dona_Flor_and_Her_Two_Husbands?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;zC6zeFZCL1pmCgeM31J98JXMYJvaAWM7Hw7ALHHmSMkxseaig5xQVCmhAYX5154YtFmqQTynrb1eSUGIUkvqWQ==&#39;)}); return false;\">4 stars <span class=\"greyText\">(2856)<\/span><\/a>\n                  <span class=\"lo