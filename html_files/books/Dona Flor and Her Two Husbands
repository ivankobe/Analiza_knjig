    <div class="js-dataTooltip" data-use-wtr-tooltip='true'>
        <div class="js-tooltipTrigger tooltipTrigger" data-resource-type='Book' data-resource-id='723456' data-placement='bottom-left'>
          <a href="/book/show/723456.Capit_es_da_Areia"><img id="more_book_723456" alt="Capitães da Areia" title="Capitães da Areia" width="50" src="https://i.gr-assets.com/images/S/compressed.photo.goodreads.com/books/1223478261l/723456._SX98_.jpg" /></a>
