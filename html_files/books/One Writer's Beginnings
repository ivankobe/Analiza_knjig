<div id="review_43358040" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/43358040" />
    <a title="Amy" class="left imgcol" href="/user/show/1710557-amy"><img alt="Amy" src="https://images.gr-assets.com/users/1475336903p2/1710557.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/43358040?book_show_action=true">Jan 17, 2009</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Amy" class="user" itemprop="url" name="Amy" href="/user/show/1710557-amy">Amy</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/1710557-amy?shelf=bookcrossing">bookcrossing</a>, 
              <a class="actionLinkLite" href="/review/list/1710557-amy?shelf=satisfying">satisfying</a>, 
              <a class="actionLinkLite" href="/review/list/1710557-amy?shelf=home-library">home-library</a>, 
