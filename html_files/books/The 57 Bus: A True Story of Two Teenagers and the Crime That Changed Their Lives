<div id="review_2234231276" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2234231276" />
    <a title="Rita Shaffer" class="left imgcol" href="/user/show/9751430-rita-shaffer"><img alt="Rita Shaffer" src="https://images.gr-assets.com/users/1561495860p2/9751430.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2234231276?book_show_action=true">Feb 27, 2018</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Rita Shaffer" class="user" itemprop="url" name="Rita Shaffer" href="/user/show/9751430-rita-shaffer">Rita Shaffer</a>
