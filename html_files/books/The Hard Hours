<div id="review_2627651526" class="review notext nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2627651526" />
    <a title="Caterina" class="left imgcol" href="/user/show/5558460-caterina"><img alt="Caterina" src="https://images.gr-assets.com/users/1487431115p2/5558460.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Caterina" class="user" itemprop="url" name="Caterina" href="/user/show/5558460-caterina">Caterina</a>
