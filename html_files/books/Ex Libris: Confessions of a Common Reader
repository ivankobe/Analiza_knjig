        $('bookCover_113148').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_113148').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_113148').observe('prototip:hidden', function () {
