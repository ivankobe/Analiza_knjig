<div id="review_727231623" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/727231623" />
    <a title="Fabian" class="left imgcol" href="/user/show/1036893-fabian"><img alt="Fabian" src="https://images.gr-assets.com/users/1514061293p2/1036893.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/727231623?book_show_action=true">Sep 24, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Fabian" class="user" itemprop="url" name="Fabian" href="/user/show/1036893-fabian">Fabian</a>
      </span>

