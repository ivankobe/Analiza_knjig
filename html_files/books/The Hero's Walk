<div id="review_2715755385" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2715755385" />
    <a title="Dsinglet" class="left imgcol" href="/user/show/4518841-dsinglet"><img alt="Dsinglet" src="https://images.gr-assets.com/users/1355811433p2/4518841.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2715755385?book_show_action=true">Feb 14, 2019</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Dsinglet" class="user" itemprop="url" name="Dsinglet" href="/user/show/4518841-dsinglet">Dsinglet</a>
