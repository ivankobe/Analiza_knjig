      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_697'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/534489.The_Violent_Bear_It_Away?rating=\">all <span class=\"greyText\">(27188)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/534489.The_Violent_Bear_It_Away?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;6xs5ZMUiVQbTopJysG0KYg+SqX2s2IBh8hyc2y8AD6ML33YuhfR6CrvDxw5LMei+MsnbgSoQ0pcisJRbXJ/1Fg==&#39;)}); return false;\">5 stars <span class=\"greyText\">(4474)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/534489.The_Violent_Bear_It_Away?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;B8FM2lJei1pVrI1fpolrsL5dPJ6TLFG17Uc5tNrbvQfnBQOQEoikVj3N2CNd1YlsgwZOYhXkA0M96zE0qURHsg==&#39;)}); return false;\">4 stars <span class=\"greyText\">(4126)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><