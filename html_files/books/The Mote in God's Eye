<div id="review_129865411" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/129865411" />
    <a title="Felicia" class="left imgcol" href="/user/show/666892-felicia"><img alt="Felicia" src="https://images.gr-assets.com/users/1437521850p2/666892.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/129865411?book_show_action=true">Nov 08, 2010</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Felicia" class="user" itemprop="url" name="Felicia" href="/user/show/666892-felicia">Felicia</a>
