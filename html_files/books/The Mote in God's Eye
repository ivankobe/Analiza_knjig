        $('bookCover_121581').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_121581').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
