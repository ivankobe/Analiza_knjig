<div id="review_1467186855" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1467186855" />
    <a title="Carol" class="left imgcol" href="/user/show/7668522-carol"><img alt="Carol" src="https://images.gr-assets.com/users/1546364878p2/7668522.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1467186855?book_show_action=true">Dec 12, 2015</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Carol" class="user" itemprop="url" name="Carol" href="/user/show/7668522-carol">Carol</a>
