      <a class="uitext" rel="nofollow" id="span_class_gr-hyperlink_more_filters_span_tip_193" style="cursor: pointer; " href="#" onclick="return false"><span class="gr-hyperlink">More filters</span></a><script>
//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_193'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/57045.Downbelow_Station?rating=\">all <span class=\"greyText\">(27781)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/57045.Downbelow_Station?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;8kSkUONlxwtt6cu62tejNJngFQV9RKZiOjlQUQT2vmSE2Zq2VE1e4Ocwa0nWZc1Z7woxAKXPtb9AwEbJmcVrOg==&#39;)}); return false;\">5 stars <span class=\"greyText\">(5019)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/57045.Downbelow_Station?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;BLxYfu3bqAnJayM2QN4Tz8mmxJEtC5vMSUxMnUay2CVyIWaYWvMx4kOyg8VMbH2iv0zglPWAiBEztVoF24ENew==&#39;)}); return false;\">4 stars <span class=\"greyText\">(5510)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n               