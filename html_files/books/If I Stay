        $('bookCover_99561').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_99561').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_99561').observe('prototip:hidden', function () {
