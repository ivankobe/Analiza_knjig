  <div class="friendReviews elementListBrown" >
    <div class="section">
      

<div id="review_2854621960" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2854621960" />
    <a title="Kevin Shepherd" class="left imgcol" href="/user/show/67532575-kevin-shepherd"><img alt="Kevin Shepherd" src="https://images.gr-assets.com/users/1623927409p2/67532575.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2854621960?book_show_action=true">Jun 20, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Kevin Shepherd" class="user" itemprop="url" name="Kevin Shepherd" href="/user/show/67532575-kevin-shepherd">Kevin Shepherd</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/67532575-kevin-shepherd?shelf=non-fiction">non-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/67532575-kevin-shepherd?shelf=own">own</a>, 
              <a class="actionLinkLite" href="/review/list/67532575-kevin-shepherd?shelf=politics">politics</a>, 
              <a class="actionLinkLite" href="/review/list/67532575-kevin-shepherd?shelf=crime">crime</a>, 
              <a class="actionLinkLite" href="/review/list/67532575-kevin-shepherd?shelf=race-social-justice">race-social-justice</a>, 
              <a class="actionLinkLite" href="/review/list/67532575-kevin-shepherd?shelf=sociology">sociology</a>, 
              <a class="actionLinkLite" href="/review/list/67532575-kevin-shepherd?shelf=reviewed">reviewed</a>
          </div>
