        $('bookCover_1178206').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_1178206').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
