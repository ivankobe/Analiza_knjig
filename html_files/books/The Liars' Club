      });

      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_35785002').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_35785002').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_35785002').observe('prototip:hidden', function () {
