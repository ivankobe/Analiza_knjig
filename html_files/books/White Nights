        $('bookCover_537094').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_537094').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
