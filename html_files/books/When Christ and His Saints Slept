<div id="review_3010419753" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/3010419753" />
    <a title="Cindy Rollins" class="left imgcol" href="/user/show/3480406-cindy-rollins"><img alt="Cindy Rollins" src="https://images.gr-assets.com/users/1379169069p2/3480406.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/3010419753?book_show_action=true">Oct 12, 2019</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Cindy Rollins" class="user" itemprop="url" name="Cindy Rollins" href="/user/show/3480406-cindy-rollins">Cindy Rollins</a>
