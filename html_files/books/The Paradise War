        $('bookCover_201901').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_201901').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
