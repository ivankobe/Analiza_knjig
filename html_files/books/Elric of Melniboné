      <a class="uitext" rel="nofollow" id="span_class_gr-hyperlink_more_filters_span_tip_671" style="cursor: pointer; " href="#" onclick="return false"><span class="gr-hyperlink">More filters</span></a><script>
//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_671'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/30036.Elric_of_Melnibon_?rating=\">all <span class=\"greyText\">(45020)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/30036.Elric_of_Melnibon_?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;UMPzp/95yfVXenGJS7AGRw6a6YDRNfdUXd42yDvXHgSwEn1LLVaU7q0f2wLoehVZI1mM9pTgMhGtdvBdTlefuA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(7232)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/30036.Elric_of_Melnibon_?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;RlcnZhUkGoOj1G7dEYnX7trz9xYg+VIyDuNnnrfLwt6mhqmKxwtHmFmxxFayQ8Tw9zCSYGUsl3f+S6ELwktDYg==&#39;)}); return false;\">4 stars <span class=\"greyText\">(9030)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n            