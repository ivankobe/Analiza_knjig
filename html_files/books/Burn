        $('bookCover_54893918').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_54893918').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
