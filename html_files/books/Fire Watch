      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Redsteve" class="user" itemprop="url" name="Redsteve" href="/user/show/1858497-redsteve">Redsteve</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was ok"><span size="15x15" class="staticStar p10">it was ok</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/1858497-redsteve?shelf=history">history</a>, 
              <a class="actionLinkLite" href="/review/list/1858497-redsteve?shelf=fiction">fiction</a>, 
              <a class="actionLinkLite" href="/review/list/1858497-redsteve?shelf=short-stories">short-stories</a>, 
              <a class="actionLinkLite" href="/review/list/1858497-redsteve?shelf=science-fiction">science-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/1858497-redsteve?shelf=post-apocolypse">post-apocolypse</a>, 
              <a class="actionLinkLite" href="/review/list/1858497-redsteve?shelf=mid-20th-century">mid-20th-century</a>, 
              <a class="actionLinkLite" href="/review/list/1858497-redsteve?shelf=time-travel">time-travel</a>, 
              <a class="actionLinkLite" href="/review/list/1858497-redsteve?shelf=religion">religion</a>, 
              <a class="actionLinkLite" href="/review/list/1858497-redsteve?shelf=dystopia">dystopia</a>, 
