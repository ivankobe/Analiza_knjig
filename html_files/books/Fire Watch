          $$('div.prototip').each(function (e) {
            if ($('bookCover_53429033').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_53429033').observe('prototip:hidden', function () {
