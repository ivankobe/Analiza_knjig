<div id="review_1636601454" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1636601454" />
    <a title="Rebecca (whenallotherlightsgoout)" class="left imgcol" href="/user/show/38496373-rebecca-whenallotherlightsgoout"><img alt="Rebecca (whenallotherlightsgoout)" src="https://images.gr-assets.com/users/1542271427p2/38496373.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1636601454?book_show_action=true">May 12, 2016</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Rebecca (whenallotherlightsgoout)" class="user" itemprop="url" name="Rebecca (whenallotherlightsgoout)" href="/user/show/38496373-rebecca-whenallotherlightsgoout">Rebecca (whenallotherlightsgoout)</a>
