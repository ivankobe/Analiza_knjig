        $('bookCover_186074').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_186074').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
