        $('bookCover_18044686').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_18044686').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
