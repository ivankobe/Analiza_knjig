    <div class="js-dataTooltip" data-use-wtr-tooltip='true'>
        <div class="js-tooltipTrigger tooltipTrigger" data-resource-type='Book' data-resource-id='65125' data-placement='bottom-left'>
          <a href="/book/show/65125.Alburquerque"><img id="more_book_65125" alt="Alburquerque" title="Alburquerque" width="50" src="https://i.gr-assets.com/images/S/compressed.photo.goodreads.com/books/1347373203l/65125._SX98_.jpg" /></a>
