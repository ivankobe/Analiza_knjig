        $('bookCover_23592682').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_23592682').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
