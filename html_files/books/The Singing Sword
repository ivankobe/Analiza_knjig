      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_22173474').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_22173474').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_22173474').observe('prototip:hidden', function () {
