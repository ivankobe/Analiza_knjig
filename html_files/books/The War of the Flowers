<div id="review_2189919897" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2189919897" />
    <a title="Hebah" class="left imgcol" href="/user/show/26724444-hebah"><img alt="Hebah" src="https://images.gr-assets.com/users/1484367337p2/26724444.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2189919897?book_show_action=true">Nov 20, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Hebah" class="user" itemprop="url" name="Hebah" href="/user/show/26724444-hebah">Hebah</a>
