        $('bookCover_77295').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_77295').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
