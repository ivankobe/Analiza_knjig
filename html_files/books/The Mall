        $('bookCover_45422567').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_45422567').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
