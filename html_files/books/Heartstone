        $('bookCover_71102').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_71102').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
