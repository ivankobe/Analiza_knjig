        $('bookCover_9911').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_9911').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
