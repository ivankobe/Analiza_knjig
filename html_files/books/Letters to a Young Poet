      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_759'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/46199.Letters_to_a_Young_Poet?rating=\">all <span class=\"greyText\">(148565)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/46199.Letters_to_a_Young_Poet?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;qX04Ro71nsoYMmnNoFWdrXzFMJcN6I5/hW8pyBkHEIm9+w+ZcT6gkHgrlfPrye9Oo7GufM+WTQvT3NXEuHCzaw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(30639)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/46199.Letters_to_a_Young_Poet?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;sAoVANf89UTBUiAcc3MHak4gTQGHANag1bZLW81QJGWkjCLfKDfLHqFL3CI473WJkVTT6kV+FdSDBbdXbCeHhw==&#39;)}); return false;\">4 stars <span class=\"greyText\">(18020)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/s