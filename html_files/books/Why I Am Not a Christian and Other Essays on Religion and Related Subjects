<div id="review_664451380" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/664451380" />
    <a title="Florencia" class="left imgcol" href="/user/show/21575078-florencia"><img alt="Florencia" src="https://images.gr-assets.com/users/1624565478p2/21575078.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/664451380?book_show_action=true">Jul 10, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Florencia" class="user" itemprop="url" name="Florencia" href="/user/show/21575078-florencia">Florencia</a>
