      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Tania" class="user" itemprop="url" name="Tania" href="/user/show/21248352-tania">Tania</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>

          <span class="greyText">&nbsp;&middot;&nbsp;</span>
          <a class="lightGreyText" title="Paperback 9781906462024" href="/book/show/2277185.Miss_Pettigrew_Lives_for_a_Day">review of another edition</a>


        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/21248352-tania?shelf=middlebrow">middlebrow</a>, 
              <a class="actionLinkLite" href="/review/list/21248352-tania?shelf=persephone">persephone</a>, 
              <a class="actionLinkLite" href="/review/list/21248352-tania?shelf=london">london</a>
          </div>
