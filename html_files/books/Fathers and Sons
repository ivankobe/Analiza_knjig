        $('bookCover_5695').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_5695').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
