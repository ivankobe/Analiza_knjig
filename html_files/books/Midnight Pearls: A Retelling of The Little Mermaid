      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_457350').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_457350').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_457350').observe('prototip:hidden', function () {
