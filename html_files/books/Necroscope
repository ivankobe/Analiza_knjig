<div id="review_2194820760" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2194820760" />
    <a title="J.J." class="left imgcol" href="/user/show/74222395-j-j"><img alt="J.J." src="https://images.gr-assets.com/users/1522686677p2/74222395.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2194820760?book_show_action=true">Nov 25, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="J.J." class="user" itemprop="url" name="J.J." href="/user/show/74222395-j-j">J.J.</a>
