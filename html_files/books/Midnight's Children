      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_256'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/14836.Midnight_s_Children?rating=\">all <span class=\"greyText\">(307524)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/14836.Midnight_s_Children?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;vO7ccVscrSF4PfixEaIVKQBhFltP5rnUJc2XI3DGAngY/wYe45DMONgkXlXNE2swp2lFes3Mz/8RJRyuSUv2MA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(42012)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/14836.Midnight_s_Children?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;aELGj1yOcwQdj5rjlpQ7d+NraTtAt1hyoU7ecn/y9VHMUxzg5AISHb2WPAdKJUVuRGM6GsKdLlmVplX/Rn8BGQ==&#39;)}); return false;\">4 stars <span class=\"greyText\">(36552)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n      