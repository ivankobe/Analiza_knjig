<div id="review_2102326644" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2102326644" />
    <a title="d.a.v.i.d" class="left imgcol" href="/user/show/67794375-d-a-v-i-d"><img alt="d.a.v.i.d" src="https://images.gr-assets.com/users/1616351021p2/67794375.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2102326644?book_show_action=true">Sep 02, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="d.a.v.i.d" class="user" itemprop="url" name="d.a.v.i.d" href="/user/show/67794375-d-a-v-i-d">d.a.v.i.d</a>
