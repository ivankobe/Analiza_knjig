      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('edition_25304404').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_25304404').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_25304404').observe('prototip:hidden', function () {
