      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_661'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/139418.The_Silver_Kiss?rating=\">all <span class=\"greyText\">(28085)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/139418.The_Silver_Kiss?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;upho+RxCpRoMjMBqW+CZYKCBBOqPCwUuR9oTqhyobzPKVoDJV0TTb4LVXKB/i143+ij5jx3tRyfpUqWJdx8Ejg==&#39;)}); return false;\">5 stars <span class=\"greyText\">(4977)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/139418.The_Silver_Kiss?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;4tIxpYo+NkpKo6RTl20JM+kV7lXrjoV6wxyU7ltJrWCSHNmVwThAP8T6OJmzBs5ks7wTMHlox3NtlCLNMP7G3Q==&#39;)}); return false;\">4 stars <span class=\"greyText\">(4994)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  