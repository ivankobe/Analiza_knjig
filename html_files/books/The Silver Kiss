<div id="review_20263238" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/20263238" />
    <a title="Cherie" class="left imgcol" href="/user/show/1019558-cherie"><img alt="Cherie" src="https://images.gr-assets.com/users/1310255951p2/1019558.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/20263238?book_show_action=true">Apr 15, 2008</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Cherie" class="user" itemprop="url" name="Cherie" href="/user/show/1019558-cherie">Cherie</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="liked it"><span size="15x15" class="staticStar p10">liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>



        

