  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2788966229?book_show_action=true">Mar 22, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Heidi " class="user" itemprop="url" name="Heidi " href="/user/show/416888-heidi">Heidi </a>
