<div id="review_1655634245" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1655634245" />
    <a title="Staci" class="left imgcol" href="/user/show/11909124-staci"><img alt="Staci" src="https://images.gr-assets.com/users/1511322847p2/11909124.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1655634245?book_show_action=true">Jun 01, 2016</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Staci" class="user" itemprop="url" name="Staci" href="/user/show/11909124-staci">Staci</a>
