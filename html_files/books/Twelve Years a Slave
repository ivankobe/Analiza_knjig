<div id="review_867944629" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/867944629" />
    <a title="Carol" class="left imgcol" href="/user/show/7668522-carol"><img alt="Carol" src="https://images.gr-assets.com/users/1546364878p2/7668522.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/867944629?book_show_action=true">Feb 28, 2014</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Carol" class="user" itemprop="url" name="Carol" href="/user/show/7668522-carol">Carol</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="liked it"><span size="15x15" class="staticStar p10">liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>

          <span class="greyText">&nbsp;&middot;&nbsp;</span>
          <a class="lightGreyText" title="Paperback 9780143125419" href="/book/show/18143088-12-years-a-slave">review of another edition</a>


        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/7668522-carol?shelf=bookclub">bookclub</a>, 
              <a class="actionLinkLite" href="/review/list/7668522-carol?shelf=non-fiction">non-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/7668522-carol?shelf=classics">classics</a>, 
              <a class="actionLinkLite" href="/review/list/7668522-carol?shelf=memoir">memoir</a>, 
