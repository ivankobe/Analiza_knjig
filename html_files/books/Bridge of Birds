        $('edition_9783195').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_9783195').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
