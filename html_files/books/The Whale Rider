      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_460635').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_460635').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_460635').observe('prototip:hidden', function () {
