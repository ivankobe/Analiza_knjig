        $('bookCover_1344428').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_1344428').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
