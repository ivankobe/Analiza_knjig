        $('edition_6438479').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_6438479').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
