        $('bookCover_33456').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_33456').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
