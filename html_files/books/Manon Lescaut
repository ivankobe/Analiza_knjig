<div id="review_523207618" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/523207618" />
    <a title="Apostolia" class="left imgcol" href="/user/show/9017202-apostolia"><img alt="Apostolia" src="https://images.gr-assets.com/users/1339531532p2/9017202.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/523207618?book_show_action=true">Jan 31, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
