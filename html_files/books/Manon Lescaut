<div id="review_631582834" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/631582834" />
    <a title="Rebecca" class="left imgcol" href="/user/show/2201113-rebecca"><img alt="Rebecca" src="https://images.gr-assets.com/users/1578777602p2/2201113.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/631582834?book_show_action=true">Jun 03, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Rebecca" class="user" itemprop="url" name="Rebecca" href="/user/show/2201113-rebecca">Rebecca</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was ok"><span size="15x15" class="staticStar p10">it was ok</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/2201113-rebecca?shelf=translated">translated</a>, 
              <a class="actionLinkLite" href="/review/list/2201113-rebecca?shelf=reviewed">reviewed</a>, 
              <a class="actionLinkLite" href="/review/list/2201113-rebecca?shelf=france">france</a>, 
