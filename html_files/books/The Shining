        $('bookCover_71826').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_71826').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
