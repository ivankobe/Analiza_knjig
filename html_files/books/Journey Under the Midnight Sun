        $('bookCover_39351376').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_39351376').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_39351376').observe('prototip:hidden', function () {
