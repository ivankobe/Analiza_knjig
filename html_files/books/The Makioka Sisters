      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_20'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/34449.The_Makioka_Sisters?rating=\">all <span class=\"greyText\">(35935)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/34449.The_Makioka_Sisters?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;AGMkwp9U5ZvSdYTOH5SZTGOlvOIV14lFnNIaaGpCQVOzHhNbQJBTZnMQi/8tIaCtW8G5ttvTIwxGuDc19TApnw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(2535)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/34449.The_Makioka_Sisters?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;9HBIQEz8/uCvOEOol2gOAm9xXqPzJqtxB/hW8qrzwO9HDX/ZkzhIHQ5dTJml3TfjVxVb9z0iATjdknuvNYGoIw==&#39;)}); return false;\">4 stars <span class=\"greyText\">(2784)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/34449.The_Makioka_Sisters?rating=3&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;xpGt4X4UmJ2dR6K1XaXf4jQYkhSRkjBf/L1GRpDepQh17Jp4odAuYDwirYRvEOYDDHyXQF+WmhYm12sbD6zNxA==&#39;)}); return false;\">3 stars <span class=\"greyText\">(1321)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/34449.The_Makioka_Sisters?rating=2&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;+hZcIbtOH0GEc9P7PrxCOOSyoUYeiGmUA2J/O972rzZJa2u4ZIqpvCUW3MoMCXvZ3NakEtCMw93ZCFJmQYTH+g==&#39;)}); return false;\">2 stars <span class=\"greyText\">(337)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/34449.The_Makioka_Sisters?rating=1&#39;, {asynchronous:true, evalScripts:true