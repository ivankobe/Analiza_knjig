        $('bookCover_71704').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_71704').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
