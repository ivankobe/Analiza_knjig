        $('edition_19595').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('edition_19595').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_19595').observe('prototip:hidden', function () {
