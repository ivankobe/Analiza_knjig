        $('bookCover_51179235').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_51179235').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_51179235').observe('prototip:hidden', function () {
