        $('bookCover_227302').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_227302').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_227302').observe('prototip:hidden', function () {
