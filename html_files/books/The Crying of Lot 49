      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_58'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/2794.The_Crying_of_Lot_49?rating=\">all <span class=\"greyText\">(144437)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/2794.The_Crying_of_Lot_49?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;WmReBccEyOYF9g/B2oaX7LBAUkwsjeIC7Poijc2TwVpRSTZUJLuopDdPg5FL/10R2nOnZWOtnRZHrhw1kFmTVA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(20725)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/2794.The_Crying_of_Lot_49?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;Owi50vpYYV1Dnt9QiP9F4Ci3IHNoDB6Zixm9ue1F/kkwJdGDGecBH3EnUwAZho8dQoTVWicsYY0gTYMBsI+sRw==&#39;)}); return false;\">4 stars <span class=\"greyText\">(26980)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n       