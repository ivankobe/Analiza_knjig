<div id="review_1405054700" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1405054700" />
    <a title="Heidi" class="left imgcol" href="/user/show/2349823-heidi"><img alt="Heidi" src="https://images.gr-assets.com/users/1447289169p2/2349823.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1405054700?book_show_action=true">Mar 04, 2018</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Heidi" class="user" itemprop="url" name="Heidi" href="/user/show/2349823-heidi">Heidi</a>
