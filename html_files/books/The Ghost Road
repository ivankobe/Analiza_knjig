        $('bookCover_375013').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_375013').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
