<div id="review_1819937495" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1819937495" />
    <a title="Cruth" class="left imgcol" href="/user/show/12723605-cruth"><img alt="Cruth" src="https://images.gr-assets.com/users/1392864210p2/12723605.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1819937495?book_show_action=true">Nov 23, 2016</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Cruth" class="user" itemprop="url" name="Cruth" href="/user/show/12723605-cruth">Cruth</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="liked it"><span size="15x15" class="staticStar p10">liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/12723605-cruth?shelf=contemporary">contemporary</a>, 
              <a class="actionLinkLite" href="/review/list/12723605-cruth?shelf=hero-injured">hero-injured</a>, 
              <a class="actionLinkLite" href="/review/list/12723605-cruth?shelf=library">library</a>, 
              <a class="actionLinkLite" href="/review/list/12723605-cruth?shelf=mystery-suspense">mystery-suspense</a>, 
              <a class="actionLinkLite" href="/review/list/12723605-cruth?shelf=heroine-injured">heroine-injured</a>, 
              <a class="actionLinkLite" href="/review/list/12723605-cruth?shelf=hero-divorced">hero-divorced</a>
          </div>
