<div id="review_1244165509" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1244165509" />
    <a title="LATOYA JOVENA" class="left imgcol" href="/user/show/41700915-latoya-jovena"><img alt="LATOYA JOVENA" src="https://images.gr-assets.com/users/1427896211p2/41700915.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1244165509?book_show_action=true">May 21, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="LATOYA JOVENA" class="user" itemprop="url" name="LATOYA JOVENA" href="/user/show/41700915-latoya-jovena">LATOYA JOVENA</a>
