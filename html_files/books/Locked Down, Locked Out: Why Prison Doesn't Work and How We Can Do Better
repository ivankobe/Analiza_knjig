        <div data-react-class="ReactComponents.ReviewCta" data-react-props="{&quot;bookId&quot;:&quot;20578444&quot;,&quot;user&quot;:{&quot;viewableName&quot;:&quot;&quot;,&quot;profileImage&quot;:&quot;https://s.gr-assets.com/assets/nophoto/user/u_50x66-632230dc9882b4352d753eedf9396530.png&quot;,&quot;profileUrl&quot;:null},&quot;actionType&quot;:&quot;community_reviews_cta&quot;,&quot;destinationPath&quot;:&quot;/review/edit/20578444&quot;,&quot;bookTitle&quot;:&quot;Locked Down, Locked Out: Why Prison Doesn&#39;t Work and How We Can Do Better&quot;,&quot;ratingClickstreamRef&quot;:&quot;cr_rtg_str_bsh&quot;}"><div class="reviewCta" data-reactid=".j1pzawx7jy" data-react-checksum="-1284812188"><div class="reviewCta__left" data-reactid=".j1pzawx7jy.0"><img class="rectangularIcon rectangularIcon--border" src="https://s.gr-assets.com/assets/nophoto/user/u_50x66-632230dc9882b4352d753eedf9396530.png" alt="" data-reactid=".j1pzawx7jy.0.0"/></div><div class="reviewCta__right" data-reactid=".j1pzawx7jy.1"><div class="u-marginLeftXSmall reviewCta__label" data-reactid=".j1pzawx7jy.1.0"><noscript data-reactid=".j1pzawx7jy.1.0.0"></noscript><span data-reactid=".j1pzawx7jy.1.0.1">Start your review of </span><span data-reactid=".j1pzawx7jy.1.0.2">Locked Down, Locked Out: Why Prison Doesn&#x27;t Work and How We Can Do Better</span></div><div class="reviewCta__controls" data-reactid=".j1pzawx7jy.1.1"><div class="userRating" data-reactid=".j1pzawx7jy.1.1.0"><div class="userRating__starsWrapper" tabindex="0" role="group" data-reactid=".j1pzawx7jy.1.1.0.1"><button class="userRating__star userRating__star--mediumStars" title="Rate 1 star" data-reactid=".j1pzawx7jy.1.1.0.1.$1"></button><button class="userRating__star userRating__star--mediumStars" title="Rate 2 stars" data-reactid=".j1pzawx7jy.1.1.0.1.$2"></button><button class="userRating__star userRating__star--mediumStars" title="Rate 3 stars" data-reactid=".j1pzawx7jy.1.1.0.1.$3"></button><button class="userRating__star userRating