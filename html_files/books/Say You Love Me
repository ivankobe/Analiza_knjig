<div id="review_55803363" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/55803363" />
    <a title="Michelle" class="left imgcol" href="/user/show/1943703-michelle"><img alt="Michelle" src="https://images.gr-assets.com/users/1232666101p2/1943703.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/55803363?book_show_action=true">May 12, 2009</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Michelle" class="user" itemprop="url" name="Michelle" href="/user/show/1943703-michelle">Michelle</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/1943703-michelle?shelf=regency">regency</a>, 
              <a class="actionLinkLite" href="/review/list/1943703-michelle?shelf=read-own">read-own</a>, 
              <a class="actionLinkLite" href="/review/list/1943703-michelle?shelf=romance-historical">romance-historical</a>, 
              <a class="actionLinkLite" href="/review/list/1943703-michelle?shelf=read-in-2009">read-in-2009</a>, 
              <a class="actionLinkLite" href="/review/list/1943703-michelle?shelf=favorites">favorites</a>
          </div>
