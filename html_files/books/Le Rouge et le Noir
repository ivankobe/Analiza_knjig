<div id="review_1484534747" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1484534747" />
    <a title="Classic reverie" class="left imgcol" href="/user/show/37374526-classic-reverie"><img alt="Classic reverie" src="https://images.gr-assets.com/users/1480288607p2/37374526.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1484534747?book_show_action=true">Dec 29, 2015</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Classic reverie" class="user" itemprop="url" name="Classic reverie" href="/user/show/37374526-classic-reverie">Classic reverie</a>
