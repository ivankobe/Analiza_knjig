<div id="review_703086491" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/703086491" />
    <a title="Candace" class="left imgcol" href="/user/show/16384209-candace"><img alt="Candace" src="https://images.gr-assets.com/users/1459720769p2/16384209.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/703086491?book_show_action=true">Aug 24, 2013</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Candace" class="user" itemprop="url" name="Candace" href="/user/show/16384209-candace">Candace</a>
