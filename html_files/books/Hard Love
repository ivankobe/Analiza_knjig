<div id="review_9852582" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/9852582" />
    <a title="Kricket" class="left imgcol" href="/user/show/125201-kricket"><img alt="Kricket" src="https://images.gr-assets.com/users/1455408697p2/125201.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/9852582?book_show_action=true">Dec 02, 2007</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Kricket" class="user" itemprop="url" name="Kricket" href="/user/show/125201-kricket">Kricket</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="liked it"><span size="15x15" class="staticStar p10">liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/125201-kricket?shelf=lgbtq">lgbtq</a>, 
              <a class="actionLinkLite" href="/review/list/125201-kricket?shelf=guy-voice">guy-voice</a>, 
              <a class="actionLinkLite" href="/review/list/125201-kricket?shelf=teen-fiction">teen-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/125201-kricket?shelf=2007">2007</a>, 
              <a class="actionLinkLite" href="/review/list/125201-kricket?shelf=printz">printz</a>, 
              <a class="actionLinkLite" href="/review/list/125201-kricket?shelf=who-am-i">who-am-i</a>
          </div>
