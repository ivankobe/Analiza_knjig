        $('bookCover_6580510').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_6580510').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
