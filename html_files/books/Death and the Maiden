        $('bookCover_183524').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_183524').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
