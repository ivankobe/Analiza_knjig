  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2062430501?book_show_action=true">Jul 16, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Rachel C" class="user" itemprop="url" name="Rachel C" href="/user/show/55184519-rachel-c">Rachel C</a>
