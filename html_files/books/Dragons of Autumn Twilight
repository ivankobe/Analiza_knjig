        $('bookCover_15575').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_15575').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
