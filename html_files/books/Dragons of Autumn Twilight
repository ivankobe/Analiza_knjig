              <a class="actionLinkLite" href="/review/list/663898-carrie?shelf=dungeons-dragons">dungeons-dragons</a>, 
              <a class="actionLinkLite" href="/review/list/663898-carrie?shelf=magic">magic</a>, 
              <a class="actionLinkLite" href="/review/list/663898-carrie?shelf=mgr">mgr</a>, 
              <a class="actionLinkLite" href="/review/list/663898-carrie?shelf=fantasy">fantasy</a>, 
              <a class="actionLinkLite" href="/review/list/663898-carrie?shelf=dragons">dragons</a>, 
              <a class="actionLinkLite" href="/review/list/663898-carrie?shelf=magicians">magicians</a>, 
              <a class="actionLinkLite" href="/review/list/663898-carrie?shelf=goblins">goblins</a>, 
