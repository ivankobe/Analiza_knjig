  <div class="friendReviews elementListBrown" >
    <div class="section">
      

<div id="review_157834667" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/157834667" />
    <a title="J. Wootton" class="left imgcol" href="/user/show/1027995-j-wootton"><img alt="J. Wootton" src="https://images.gr-assets.com/users/1444685096p2/1027995.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/157834667?book_show_action=true">Mar 30, 2011</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="J. Wootton" class="user" itemprop="url" name="J. Wootton" href="/user/show/1027995-j-wootton">J. Wootton</a>
