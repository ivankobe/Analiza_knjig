      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_745'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/464260.The_Fire_Next_Time?rating=\">all <span class=\"greyText\">(202371)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/464260.The_Fire_Next_Time?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;cuz+8jHvMHXrsSqgTkfWm0cPOuE4dfcZ3PkOXBLCgqejmY0x74K3GQXRwlN5kAlkEyGxWETZ8kyq4F6a9iKxqw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(47676)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/464260.The_Fire_Next_Time?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;xu8odxUzkuof0hIUsgOMFV1ATVinDRzUEZ1cTbeTlHUXmlu0y14VhvGy+ueF1FPqCW7G4duhGYFnhAyLU3OneQ==&#39;)}); return false;\">4 stars <span class=\"greyText\">(20353)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n      