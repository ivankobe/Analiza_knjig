        $('bookCover_4665316').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_4665316').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_4665316').observe('prototip:hidden', function () {
