        $('bookCover_19272951').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_19272951').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
