  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2374046571?book_show_action=true">Apr 26, 2018</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Judy" class="user" itemprop="url" name="Judy" href="/user/show/21687055-judy">Judy</a>
      </span>

