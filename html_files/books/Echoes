        $('bookCover_496998').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_496998').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
