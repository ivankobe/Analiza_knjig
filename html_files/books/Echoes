<div id="review_3347057038" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/3347057038" />
    <a title="Pauline" class="left imgcol" href="/user/show/57991562-pauline"><img alt="Pauline" src="https://images.gr-assets.com/users/1610465240p2/57991562.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/3347057038?book_show_action=true">Jun 17, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Pauline" class="user" itemprop="url" name="Pauline" href="/user/show/57991562-pauline">Pauline</a>
