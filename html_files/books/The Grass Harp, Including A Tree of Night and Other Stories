        $('bookCover_9806').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_9806').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
