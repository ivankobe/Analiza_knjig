//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_704'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/2768169-the-underneath?rating=\">all <span class=\"greyText\">(17490)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/2768169-the-underneath?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;vJ2BzYjrJVkqUjSPDeR5oLkn/BtLYx/Etx8Vt0B2fJYB3AnM6/EWnrb9i/BQd0Byj3IQaHoHcb5RX/reLX7mGw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(4113)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/2768169-the-underneath?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;pPKb8zcF5LG9HMP+LJZK4rlziro7itD/uQ+Z/LLZRvUZsxPyVB/XdiGzfIFxBXMwjyZmyQruvoVfT3aV39HceA==&#39;)}); return false;\">4 stars <span class=\"greyText\">(3166)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  