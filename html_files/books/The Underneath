<div id="review_312249238" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/312249238" />
    <a title="Kwoomac" class="left imgcol" href="/user/show/2076898-kwoomac"><img alt="Kwoomac" src="https://images.gr-assets.com/users/1333998762p2/2076898.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/312249238?book_show_action=true">Apr 14, 2012</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Kwoomac" class="user" itemprop="url" name="Kwoomac" href="/user/show/2076898-kwoomac">Kwoomac</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/2076898-kwoomac?shelf=childrens">childrens</a>, 
              <a class="actionLinkLite" href="/review/list/2076898-kwoomac?shelf=favorites">favorites</a>, 
              <a class="actionLinkLite" href="/review/list/2076898-kwoomac?shelf=animal-as-main-character">animal-as-main-character</a>, 
              <a class="actionLinkLite" href="/review/list/2076898-kwoomac?shelf=reviewed">reviewed</a>, 
              <a class="actionLinkLite" href="/review/list/2076898-kwoomac?shelf=survival">survival</a>, 
              <a class="actionLinkLite" href="/review/list/2076898-kwoomac?shelf=2012">2012</a>, 
              <a class="actionLinkLite" href="/review/list/2076898-kwoomac?shelf=dark">dark</a>, 
