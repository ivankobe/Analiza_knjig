        $('bookCover_882508').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_882508').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
