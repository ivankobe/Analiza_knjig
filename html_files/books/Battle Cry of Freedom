            if ($('edition_8147859').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('edition_8147859').observe('prototip:hidden', function () {
