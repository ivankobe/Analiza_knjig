<div id="review_126423757" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/126423757" />
    <a title="Velma" class="left imgcol" href="/user/show/1843025-velma"><img alt="Velma" src="https://images.gr-assets.com/users/1611872131p2/1843025.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/126423757?book_show_action=true">Oct 15, 2010</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Velma" class="user" itemprop="url" name="Velma" href="/user/show/1843025-velma">Velma</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was ok"><span size="15x15" class="staticStar p10">it was ok</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span><span size="15x15" class="staticStar p0"></span></span>

          <span class="greyText">&nbsp;&middot;&nbsp;</span>
          <a class="lightGreyText" title="Hardcover 9780060175962" href="/book/show/531764.The_Professor_and_the_Madman">review of another edition</a>


        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/1843025-velma?shelf=setting-culture-uk">setting-culture-uk</a>, 
              <a class="actionLinkLite" href="/review/list/1843025-velma?shelf=2010-reads">2010-reads</a>, 
              <a class="actionLinkLite" href="/review/list/1843025-velma?shelf=biography">biography</a>, 
              <a class="actionLinkLite" href="/review/list/1843025-velma?shelf=non-fiction">non-fiction</a>, 
              <a class="actionLinkLite" href="/review/list/1843025-velma?shelf=history">history</a>, 
              <a class="actionLinkLite" href="/review/list/1843025-velma?shelf=books-on-books">books-on-books</a>, 
