        $('bookCover_77232').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_77232').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
