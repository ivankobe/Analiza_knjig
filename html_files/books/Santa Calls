        $('bookCover_590962').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_590962').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
