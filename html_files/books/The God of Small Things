<div id="review_886884230" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/886884230" />
    <a title="Adina" class="left imgcol" href="/user/show/22189348-adina"><img alt="Adina" src="https://images.gr-assets.com/users/1531917330p2/22189348.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/886884230?book_show_action=true">Jun 26, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Adina" class="user" itemprop="url" name="Adina" href="/user/show/22189348-adina">Adina</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="it was amazing"><span size="15x15" class="staticStar p10">it was amazing</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span></span>



        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/22189348-adina?shelf=booker">booker</a>, 
              <a class="actionLinkLite" href="/review/list/22189348-adina?shelf=india">india</a>, 
              <a class="actionLinkLite" href="/review/list/22189348-adina?shelf=w-mwl-alternative">w-mwl-alternative</a>, 
              <a class="actionLinkLite" href="/review/list/22189348-adina?shelf=twins">twins</a>
          </div>
