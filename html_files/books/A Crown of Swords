<div id="review_362649628" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/362649628" />
    <a title="Rob" class="left imgcol" href="/user/show/10743961-rob"><img alt="Rob" src="https://images.gr-assets.com/users/1422270416p2/10743961.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/362649628?book_show_action=true">Jul 06, 2012</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Rob" class="user" itemprop="url" name="Rob" href="/user/show/10743961-rob">Rob</a>
      </span>

        rated it
        <span class=" staticStars notranslate" title="really liked it"><span size="15x15" class="staticStar p10">really liked it</span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p10"></span><span size="15x15" class="staticStar p0"></span></span>

          <span class="greyText">&nbsp;&middot;&nbsp;</span>
          <a class="lightGreyText" title="Audible Audio " href="/book/show/12743150-a-crown-of-swords">review of another edition</a>


        

          <div class="uitext greyText bookshelves">
            Shelves:
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=wheel-of-time">wheel-of-time</a>, 
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=audio-book">audio-book</a>, 
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=read-before-goodreads">read-before-goodreads</a>, 
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=epic-fantasy">epic-fantasy</a>, 
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=read-2016">read-2016</a>, 
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=own">own</a>, 
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=not-a-bookclub-club">not-a-bookclub-club</a>, 
              <a class="actionLinkLite" href="/review/list/10743961-rob?shelf=fantasy">fantasy</a>, 
