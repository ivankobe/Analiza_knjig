  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2037368048?book_show_action=true">Jul 04, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Wendy" class="user" itemprop="url" name="Wendy" href="/user/show/19889444-wendy">Wendy</a>
