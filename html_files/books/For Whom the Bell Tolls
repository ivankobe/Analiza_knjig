      <a class="uitext" rel="nofollow" id="span_class_gr-hyperlink_more_filters_span_tip_693" style="cursor: pointer; " href="#" onclick="return false"><span class="gr-hyperlink">More filters</span></a><script>
//<![CDATA[
      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_693'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/46170.For_Whom_the_Bell_Tolls?rating=\">all <span class=\"greyText\">(558649)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/46170.For_Whom_the_Bell_Tolls?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;DAhGZ1jZwm6GFX2bCBs4SdZkPdHqNznbAEhpdkMbDRbe5XCwhwOyPxdJr1euV8fVHXqAH2xav2WZcWMJNzjlWA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(91670)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/46170.For_Whom_the_Bell_Tolls?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;x3N310CWl6Ib6lBqLmYkDLXL9ApAEk0zdOgZpVW9i3QVnkEAn0zn84q2gqaIKtuQftVJxMZ/y43t0RPaIZ5jOg==&#39;)}); return false;\">4 stars <span class=\"greyText\">(95020)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/s