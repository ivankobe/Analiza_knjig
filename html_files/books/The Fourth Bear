        $('bookCover_113016').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_113016').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
