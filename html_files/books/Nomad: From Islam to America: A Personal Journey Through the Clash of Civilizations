<div id="review_2118926403" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2118926403" />
    <a title="Catherine" class="left imgcol" href="/user/show/12737918-catherine"><img alt="Catherine" src="https://images.gr-assets.com/users/1347377025p2/12737918.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2118926403?book_show_action=true">Sep 10, 2017</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Catherine" class="user" itemprop="url" name="Catherine" href="/user/show/12737918-catherine">Catherine</a>
