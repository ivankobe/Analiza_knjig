        $('bookCover_444380').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_444380').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
