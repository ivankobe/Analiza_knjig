      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_538'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/17143.Go_Tell_It_on_the_Mountain?rating=\">all <span class=\"greyText\">(157371)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/17143.Go_Tell_It_on_the_Mountain?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;c+BUcnjdEPgneGeQRByJebtL+AT0iC0Ua2SIQltZ3zX1COzZuJ7ka4W3hgZPUD2cTzQTZX9AmnQ6twUy4dQkzw==&#39;)}); return false;\">5 stars <span class=\"greyText\">(20537)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/17143.Go_Tell_It_on_the_Mountain?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;zuP+kTpCpmFZmZ3zOMnLQgz5QWlyW8OjesV+KrgGMKVIC0Y6+gFS8vtWfGUzhX+n+IaqCPmTdMMrFvNaAovLXw==&#39;)}); return false;\">4 stars <span class=\"greyText\">(23140)<\/span><\/a>\n                  <span class=\"loadingAnimati