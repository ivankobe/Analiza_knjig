      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_18877577').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_18877577').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_18877577').observe('prototip:hidden', function () {
