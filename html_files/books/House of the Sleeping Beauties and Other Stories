<div id="review_1621446243" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1621446243" />
    <a title="Anthony Vacca" class="left imgcol" href="/user/show/27183668-anthony-vacca"><img alt="Anthony Vacca" src="https://images.gr-assets.com/users/1617130925p2/27183668.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1621446243?book_show_action=true">Apr 26, 2016</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Anthony Vacca" class="user" itemprop="url" name="Anthony Vacca" href="/user/show/27183668-anthony-vacca">Anthony Vacca</a>
