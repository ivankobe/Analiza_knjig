        $('bookCover_156463').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_156463').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
