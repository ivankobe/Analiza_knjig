<div id="review_1952677750" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1952677750" />
    <a title="Evelina | AvalinahsBooks" class="left imgcol" href="/user/show/13716524-evelina-avalinahsbooks"><img alt="Evelina | AvalinahsBooks" src="https://images.gr-assets.com/users/1592760668p2/13716524.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1952677750?book_show_action=true">Oct 07, 2019</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Evelina | AvalinahsBooks" class="user" itemprop="url" name="Evelina | AvalinahsBooks" href="/user/show/13716524-evelina-avalinahsbooks">Evelina | AvalinahsBooks</a>
