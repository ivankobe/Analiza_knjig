<div id="review_160428447" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/160428447" />
    <a title="Jen" class="left imgcol" href="/user/show/5256254-jen"><img alt="Jen" src="https://images.gr-assets.com/users/1514869058p2/5256254.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/160428447?book_show_action=true">Apr 11, 2011</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Jen" class="user" itemprop="url" name="Jen" href="/user/show/5256254-jen">Jen</a>
