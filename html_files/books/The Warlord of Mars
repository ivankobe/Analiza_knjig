        $('bookCover_409796').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_409796').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
