      });

      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_670262').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_670262').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_670262').observe('prototip:hidden', function () {
