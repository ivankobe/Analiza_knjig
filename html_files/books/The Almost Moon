        $('bookCover_28000876').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_28000876').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
