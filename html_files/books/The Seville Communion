<div id="review_2333774251" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/2333774251" />
    <a title="Alan" class="left imgcol" href="/user/show/5978646-alan"><img alt="Alan" src="https://s.gr-assets.com/assets/nophoto/user/m_50x66-82093808bca726cb3249a493fbd3bd0f.png" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/2333774251?book_show_action=true">Mar 20, 2018</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Alan" class="user" itemprop="url" name="Alan" href="/user/show/5978646-alan">Alan</a>
