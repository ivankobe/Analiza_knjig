<div id="review_3331933375" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/3331933375" />
    <a title="MBenzz" class="left imgcol" href="/user/show/6780866-mbenzz"><img alt="MBenzz" src="https://images.gr-assets.com/users/1624752556p2/6780866.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/3331933375?book_show_action=true">May 11, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="MBenzz" class="user" itemprop="url" name="MBenzz" href="/user/show/6780866-mbenzz">MBenzz</a>
