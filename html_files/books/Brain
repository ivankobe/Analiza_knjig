        $('bookCover_860491').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_860491').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
