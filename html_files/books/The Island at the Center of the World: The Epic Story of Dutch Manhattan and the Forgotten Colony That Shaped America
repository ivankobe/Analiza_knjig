<div id="review_40881451" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/40881451" />
    <a title="Kaci" class="left imgcol" href="/user/show/1831075-kaci"><img alt="Kaci" src="https://images.gr-assets.com/users/1230231128p2/1831075.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/40881451?book_show_action=true">Dec 25, 2008</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Kaci" class="user" itemprop="url" name="Kaci" href="/user/show/1831075-kaci">Kaci</a>
