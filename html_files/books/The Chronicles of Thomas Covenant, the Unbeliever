        $('bookCover_6122735').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_6122735').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
