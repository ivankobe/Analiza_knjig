      });

      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_110300').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_110300').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_110300').observe('prototip:hidden', function () {
