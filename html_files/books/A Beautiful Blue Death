        $('bookCover_205').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_205').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
