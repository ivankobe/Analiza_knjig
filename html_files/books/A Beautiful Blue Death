<div id="review_298169767" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/298169767" />
    <a title="Mary" class="left imgcol" href="/user/show/5500603-mary"><img alt="Mary" src="https://images.gr-assets.com/users/1619798599p2/5500603.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/298169767?book_show_action=true">Mar 21, 2012</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Mary" class="user" itemprop="url" name="Mary" href="/user/show/5500603-mary">Mary</a>
