        $('bookCover_645754').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_645754').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
