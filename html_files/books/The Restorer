        $('bookCover_289644').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_289644').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
