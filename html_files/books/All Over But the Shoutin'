<div id="review_1656792356" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1656792356" />
    <a title="Gary" class="left imgcol" href="/user/show/37678060-gary"><img alt="Gary" src="https://images.gr-assets.com/users/1426717728p2/37678060.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1656792356?book_show_action=true">Jun 02, 2016</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Gary" class="user" itemprop="url" name="Gary" href="/user/show/37678060-gary">Gary</a>
      </span>

