      var newTip = new Tip($('span_class_gr-hyperlink_more_filters_span_tip_199'), "\n          <div class=\"greyText smallText\" style=\"white-space:nowrap\">\n\n            <span class=\"loadingLinkSpan\"><a class=\"actionLinkLite greyText loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"/book/reviews/1103.Snow_Flower_and_the_Secret_Fan?rating=\">all <span class=\"greyText\">(578589)<\/span><\/a><span class=\"loadingAnimation\"><\/span><span class=\"loadingError\"><\/span><\/span>\n\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/1103.Snow_Flower_and_the_Secret_Fan?rating=5&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;gGk1M6w9jK9s7Op72b0hgwkPD+whAt4BefJHv9r60Wn1KPitOCzcMPkDjUi53BqHzQOlL6wuqeGrcWPkJEm/UA==&#39;)}); return false;\">5 stars <span class=\"greyText\">(130869)<\/span><\/a>\n                  <span class=\"loadingAnimation\"><\/span>\n                  <span class=\"loadingError\"><\/span>\n                <\/span>\n                <span class=\"greyText\">&nbsp;|&nbsp;<\/span>\n                <span class=\"loadingLinkSpan\">\n                  <a class=\"actionLinkLite loadingLink\" rel=\"nofollow\" data-keep-on-success=\"true\" data-remote=\"true\" href=\"#\" onclick=\"new Ajax.Request(&#39;/book/reviews/1103.Snow_Flower_and_the_Secret_Fan?rating=4&#39;, {asynchronous:true, evalScripts:true, method:&#39;get&#39;, parameters:&#39;authenticity_token=&#39; + encodeURIComponent(&#39;JqGxfZro0fNy7spCtlt8xn5rCHjlhpVN5gzm5kUNa7pT4HzjDvmBbOcBrXHWOkfCumeiu2iq4q00j8K9u74Fgw==&#39;)}); return false;\">4 stars <span class=\"greyText\">(138941)<\/span><\/a>\n                  <span class=\"loa