<div id="review_1686783039" class="review" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/1686783039" />
    <a title="Irene" class="left imgcol" href="/user/show/1887310-irene"><img alt="Irene" src="https://s.gr-assets.com/assets/nophoto/user/f_50x66-6a03a5c12233c941481992b82eea8d23.png" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/1686783039?book_show_action=true">Jul 03, 2016</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Irene" class="user" itemprop="url" name="Irene" href="/user/show/1887310-irene">Irene</a>
