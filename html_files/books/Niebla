        $('bookCover_1357327').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_1357327').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
