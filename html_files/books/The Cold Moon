      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_985891').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_985891').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_985891').observe('prototip:hidden', function () {
