        $('bookCover_1354323').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_1354323').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
