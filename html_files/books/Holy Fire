        $('bookCover_827').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_827').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
