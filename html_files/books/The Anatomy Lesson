<div id="review_3657086177" class="review nosyndicate" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
  <link itemprop="url" href="https://www.goodreads.com/review/show/3657086177" />
    <a title="Chad" class="left imgcol" href="/user/show/7166616-chad"><img alt="Chad" src="https://images.gr-assets.com/users/1538346995p2/7166616.jpg" /></a>

  <div class="left bodycol">
    <div class="reviewHeader uitext stacked">
        <a class="reviewDate createdAt right" href="/review/show/3657086177?book_show_action=true">Dec 28, 2020</a>

      <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a title="Chad" class="user" itemprop="url" name="Chad" href="/user/show/7166616-chad">Chad</a>
