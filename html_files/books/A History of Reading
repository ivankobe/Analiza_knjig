        $('bookCover_23635416').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_23635416').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
