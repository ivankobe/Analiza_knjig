      });

      newTip['wrapper'].addClassName('prototipAllowOverflow');

        $('bookCover_9275658').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_9275658').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_9275658').observe('prototip:hidden', function () {
