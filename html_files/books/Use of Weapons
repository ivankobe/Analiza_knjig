        $('bookCover_3437328').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_3437328').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
