        $('bookCover_44236').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_44236').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
