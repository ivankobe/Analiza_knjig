        $('bookCover_12117').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_12117').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
        });
      $('bookCover_12117').observe('prototip:hidden', function () {
