        $('bookCover_52944805').observe('prototip:shown', function () {
          $$('div.prototip').each(function (e) {
            if ($('bookCover_52944805').hasClassName('ignored')) {
              e.setStyle({'display': 'none'});
              return;
            }
            e.setStyle({'overflow': 'visible'});
          });
